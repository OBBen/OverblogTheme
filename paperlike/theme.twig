                                            {{ Lang.Get('From') }} 
                                            {% list Post.Sources %}
                                                {{ Lang.Get(Source) }}
                                                {% if not loop.last %}
                                                     {{ Lang.Get('and') }} 
                                                {% endif %}
                                            {% endlist %}
                                        {% endif %}
                                    </a>
                                </h2>
                                <p class="meta">
                                    {% if Post.Author and Post.Author is not empty %}
                                        <span class="author">{{ Lang.Get('By') }} {{ Post.Author }}</span>
                                    {% endif %}
                                    <span class="date">{{ Post.Date|date("M d, H:i") }}</span>
                                    <span class="links">
                                        {% list Post.Tags %}
                                            <a href="{{Tag.Url}}" title="{{Tag.Title}}">{{Tag.Title}}</a>
                                        {% endlist %}
                                    </span>
                                </p>
                                <div class="entry">
                                    {{ Post.Body }}
                                </div>
                                <div class="ob-section m-social-networks clear">
                                    <!-- Social networks : share -->
                                    <div class="fb-like" data-href="{{ Blog.Url }}{{ Post.PermaLink }}" data-send="true" data-layout="button_count" data-width="120" data-show-faces="true" data-font="lucida grande"></div>
                                    <a href="https://twitter.com/share" class="twitter-share-button" data-text="{% if Post.Title is not empty %}{{ Post.Title }}{% elseif Post.Snippet is not empty %}{{ Post.Snippet}}{% else %}{{ Blog.Title }}{% endif %}" data-url="{{ Blog.Url }}{{ Post.PermaLink }}" data-lang="{{ Blog.Lang }}" {% if Custom('twitter_account') is not empty %} data-via="{{Custom('twitter_account')}}" {% endif %}></a>
                                </div>
                                {% if not isPage %}
                                    <div class="bloc-comment ob-section clear" id="comments">
                                        <!-- Comments -->
                                        <div id="comments" class="item-comments">
                                            {% if Custom("comment") == "Facebook" %}
                                                <div class="fb-comments" data-href="{{ Blog.Url }}{{ Post.Permalink }}" data-num-posts="2" data-width="600" data-colorscheme="{{ Custom("custom_facebook_comments_color_theme")|default('light') }}"></div>
                                            {% elseif Custom("comment") == "Disqus" and Custom('comment_disqus') is not empty %}
                                                <div id="disqus_thread"></div>
                                                <script type="text/javascript">
                                                    var disqus_shortname = '{{ Custom('comment_disqus') }}';
                                                    (function() {
                                                        var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
                                                        dsq.src = 'http://' + disqus_shortname + '.disqus.com/embed.js';
                                                        (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
                                                    })();
                                                </script>
                                                <noscript>Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
                                            {% else %}
                                                {{ Post.Comments }}
                                            {% endif %}
                                        </div>
                                    </div>
                                {% endif %}
                            </div>
                        {% else %}
                            <!-- Other Pages -->
                            {% list Posts %}
                                <div class="post clear">
                                    <h2 class="title">
                                        <a title="{{ Lang.Get('More about') }} {% if Post.Title is not empty %}&quot;{{ Post.Title }}&quot;{% else %}{{ Lang.Get('this post') }}{% endif %}" href="{{ Post.PermaLink }}">
                                            {% if Post.Title is not empty %}
                                                {{ Post.Title }}
                                            {% else %}
                                                {{ Lang.Get('From') }} 
                                                {% list Post.Sources %}
                                                    {{ Lang.Get(Source) }}
                                                    {% if not loop.last %}
                                                         {{ Lang.Get('and') }} 
                                                    {% endif %}
                                                {% endlist %}
                                            {% endif %}
                                        </a>
                                    </h2>
                                    <p class="meta">
                                        {% if Post.Author and Post.Author is not empty %}
                                            <span class="author">{{ Lang.Get('By') }} {{ Post.Author }}</span>
                                        {% endif %}
                                        <span class="date">{{ Post.Date|date("M d, H:i") }}</span>
                                        <span class="links">
                                            {% list Post.Tags %}
                                                {% if loop.index < 5 %}
                                                    <a href="{{Tag.Url}}" title="{{Tag.Title}}">{{Tag.Title}}</a>
                                                {% endif %}
                                            {% endlist %}
                                        </span>
                                        <!-- Comments count -->
                                        {% if Custom("comment") == "Disqus" and Custom('comment_disqus') is not empty %}
                                            <a title="{{ Lang.Get('comments') }}" class="comments" href="{{ Blog.Url }}{{ Post.PermaLink }}#disqus_thread"></a>
                                        {% else %}
                                            <a title="{{ Lang.Get('comments') }}" class="comments" href="{{ Post.PermaLink }}#comments">
                                                {% if Custom("comment") == "Facebook" %}
                                                    <fb:comments-count href={{ Blog.Url }}{{ Post.Permalink }}></fb:comments-count> {{ Lang.Get('comments') }}
                                                {% else %}
                                                    {{ Post.CommentCount(Lang.Get('comment'), Lang.Get('comments')) }}
                                                {% endif %}
                                            </a>
                                        {% endif %}
                                    </p>
                                    <div class="entry">
                                        <p>
                                            {% if Post.Cover is not empty %}
                                                <a class="ob-media ob-img ob-pull-left ob-media-left" title="{{ Lang.Get('More about') }} {% if Post.Title is not empty %}&quot;{{ Post.Title }}&quot;{% else %}{{ Lang.Get('this post') }}{% endif %}" href="{{ Post.PermaLink }}">
                                                    <img alt="" src="{{ Post.Cover|resize(200, 150) }}">
                                                </a>
                                            {% endif %}
                                            {{ Post.Snippet|truncate(75) }}
                                        </p>
                                        <div class="clear"></div>
                                    </div>
                                </div>
                            {% endlist %}
                            {% if isSearch and Posts is empty %}
                                <!-- No result for search -->
                                <div class="post clear">
                                    <p>{{ Lang.Get('No result found') }}</p>
                                </div>
                            {% endif %}
                        {% endif %}
                        
                        <!-- Pagination -->
                        {% if Navigation.PreviousPage is not empty or Navigation.NextPage is not empty or Navigation.PreviousPost is not empty or Navigation.NextPost is not empty %}
                            <div class="post clear">
                                <div class="pagination">
                                    {% if Navigation.PreviousPage is not empty or Navigation.PreviousPost is not empty %}
                                        <p class="alignleft">
                                            {% if Navigation.PreviousPage is not empty %}
                                                <a href="{{ Navigation.PreviousPage }}" class="prev">&laquo; {{ Lang.Get('Previous page') }}</a>
                                            {% elseif Navigation.PreviousPost is not empty %}
                                                <a href="{{ Navigation.PreviousPost.Permalink }}" class="prev" title="{{ Lang.Get('Go to') }} {% if Navigation.PreviousPost.Title is not empty %}&quot;{{ Navigation.PreviousPost.Title|truncate(30) }}&quot;{% else %}{{ Lang.Get('previous post') }}{% endif %}">&laquo; {{ Lang.Get('Previous post') }}</a>
                                            {% endif %}
                                        </p>
                                    {% endif %}
                                    {% if Navigation.NextPage is not empty or Navigation.NextPost is not empty %}
                                        <p class="alignright">
                                            {% if Navigation.NextPage is not empty %}
                                                <a href="{{ Navigation.NextPage }}" class="next">{{ Lang.Get('Next page') }} &raquo;</a>
                                            {% elseif Navigation.NextPost is not empty %}
                                                <a href="{{ Navigation.NextPost.Permalink }}" class="next" title="{{ Lang.Get('Go to') }} {% if Navigation.NextPost.Title is not empty %}&quot;{{ Navigation.NextPost.Title|truncate(30) }}&quot;{% else %}{{ Lang.Get('next post') }}{% endif %}">{{ Lang.Get('Next post') }} &raquo;</a>
                                            {% endif %}
                                        </p>
                                    {% endif %}
                                    <div class="clear"></div>
                                </div>
                            </div>
                        {% endif %}
                        
                        <!-- Blog description -->
                        {% if Custom('custom_hide_widget_blog_description') == false and Blog.Description is not empty %}
                            <div id="about">
                                {% if Custom('custom_blog_description_title') is not empty %}
                                    <h2>{{ Custom('custom_blog_description_title') }}</h2>
                                {% endif %}
                                <p>{{ Blog.Description }}</p>
                            </div>
                        {% endif %}
                    </div>
                    {% if Custom('custom_hide_widget_search_form') == false or Custom('custom_hide_widget_categories') == false or Custom('custom_hide_widget_pages') == false or Custom('custom_hide_widget_biography') == false or Custom('custom_hide_widget_archives') == false %}
                        <div id="sidebar">
                            <ul>
                                <!-- Search form -->
                                {% if Custom('custom_hide_widget_search_form') == false %}
                                    <li>
                                        <form class="search" method="get" class="search" action="/search/">
                                            <input type="text" class="s-input" title="search" value="{{ Search }}" placeholder="{{ Lang.Get('Search') }}..." name="q" />
                                            <input type="submit" class="ob-input-submit" title="Search" value="{{ Lang.Get('Go') }}" />
                                        </form>
                                    </li>
                                {% endif %}
                                
                                <!-- Categories -->
                                {% if Custom('custom_hide_widget_categories') == false %}
                                    {% if Blog.PostsTags() and Blog.PostsTags() is not empty %}
                                        <li>
                                            <h2>{{ Lang.Get('Categories') }}</h2>
                                            <ul>
                                                {% list Blog.PostsTags(10) %}
                                                    <li><a href="{{ PostsTag.Url }}">{{ PostsTag.Title }} ({{ PostsTag.PostCount }})</a></li>
                                                {% endlist %}
                                            </ul>
                                        </li>
                                    {% endif %}
                                {% endif %}
                                
                                <!-- Pages -->
                                {% if Custom('custom_hide_widget_pages') == false %}
                                    {% if Blog.ListPages and Blog.ListPages is not empty %}
                                        <li>
                                            <h2>{{ Lang.Get('Pages') }}</h2>
                                            <ul>
                                                {% list Blog.ListPages %}
                                                    <li>
                                                        <a href="{{ListPage.Url}}">{{ListPage.Title}}</a>
                                                    </li>
                                                {% endlist %} 
                                            </ul>
                                        </li>
                                    {% endif %}
                                {% endif %}
                                
                                <!-- Blog owner -->
                                {% if Custom('custom_hide_widget_biography') == false %}
                                    <li>
                                        {% if Blog.Owner.Nickname is not empty and Blog.Owner.Bio is not empty %}
                                            <h2>{{ Blog.Owner.Nickname }}</h2>
                                            {% if Blog.Owner.Bio is not empty %}
                                                <p>
                                                    {% if Blog.Owner.Avatar is not empty %}
                                                        <a title="{{ Blog.Owner.Nickname }}" class="fancybox ob-media ob-img ob-pull-left ob-media-left" href="{{ Blog.Owner.Avatar }}"><img src="{{ Blog.Owner.Avatar|resize(45,45) }}" alt="" /></a>
                                                    {% endif %}
                                                    {{Blog.Owner.Bio}}
                                                </p>
                                            {% endif %}
                                            <p class="m-networks">
                                                {% if Custom('facebook_profile_id') is not empty %}
                                                    <a title="Facebook" target="_blank" href="http://www.facebook.com/profile.php?id={{ Custom('facebook_profile_id') }}"><img alt="Facebook" src="http://www.efusia.net/overblog/paperlike/images/facebook.png"></a>
                                                {% endif %}
                                                {% if Custom('twitter_account') is not empty %}
                                                    <a title="Twitter" target="_blank" href="https://www.twitter.com/{{ Custom('twitter_account') }}"><img alt="Twitter" src="http://www.efusia.net/overblog/paperlike/images/twitter.png"></a>
                                                {% endif %}
                                                <a title="RSS" target="_blank" href="{{ Blog.RssUrl }}"><img alt="RSS" src="http://www.efusia.net/overblog/paperlike/images/rss.png"></a>
                                            </p>
                                        {% endif %}
                                    </li>
                                {% endif %}
                                
                                <!-- Archives -->
                                {% if Custom('custom_hide_widget_archives') == false %}
                                    {% if Blog.Archives is not empty %}
                                        <li>
                                            <h2>{{ Lang.Get('Archives') }}</h2>
                                            <ul class="list" id="archivelist">
                                                {% list Blog.Archives %}
                                                    <li>
                                                        <a href="#" class"plustext" onclick="javascript: return switch_arch('{{Archive.Year}}')">{{Archive.Year}}</a>
                                                        <ul id="arch_{{Archive.Year}}" class="arch_month">
                                                        {% list Archive.Months %}
                                                            {% if Month.PostCount > 0 %}
                                                                <li><a href="{{Month.Url}}">{{Month.Name}}</a> ({{Month.PostCount}})</li>
                                                            {% endif %}
                                                        {% endlist %}
                                                        </ul>
                                                    </li>
                                                {% endlist %}
                                            </ul>
                                        </li>
                                    {% endif %}
                                {% endif %}
                            </ul>
                        </div>
                    {% endif %}
                    <div style="clear: both; height: 20px;">&nbsp;</div>
                </div>
            </div>
        </div>
        <div class="m-wrapper m-footer">
            <div id="footer-wrap">
                {% if Custom('custom_footer') %}
                    <p>{{ Custom('custom_footer') }}</p>
                {% endif %}
            </div>
        </div>
        
        <!-- Google Analytics -->
        {% if Custom('google_analytics') is not empty %}
            <script type="text/javascript">
                window.google_analytics_uacct = '{{ Custom('google_analytics') }}';
                var _gaq = _gaq || [];
                _gaq.push(['_setAccount', '{{ Custom('google_analytics') }}']);
                _gaq.push(['_trackPageview']);
                _gaq.push(['_trackPageLoadTime']);

                (function() {
                    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
                    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
                    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
                })();
            </script>
        {% endif %}
        
        <!-- Archives -->
        {% if Custom('custom_hide_widget_archives') == false %}
            <script type="text/javascript">
                function switch_arch(year) {
                    'use strict';
                    var archiveYear, archiveMonths, displayStyle;
                    displayStyle = '';
                    archiveYear = document.getElementById('arch_' + year);
                    if (typeof (archiveYear) !== 'undefined') {
                        if (archiveYear.style.display !== 'none') {
                            // Hide years without months
                            archiveMonths = archiveYear.getElementsByTagName('li');
                            if (!archiveMonths.length) {
                                archiveYear.parentNode.style.display = 'none';
                            }
                            // Onclick management
                            displayStyle = 'none';
                        }
                        archiveYear.style.display = displayStyle;
                    }
                    return false;
                }
            </script>
        {% endif%}
        
        <!-- Social networks : Facebook -->
        <div id="fb-root"></div>
        <script type="text/javascript">
            (function(d, s, id) {
                var js, fjs = d.getElementsByTagName(s)[0];
                if (d.getElementById(id)) return;
                js = d.createElement(s); js.id = id;
                js.src = "//connect.facebook.net/en_US/all.js#xfbml=1&appId={{ Custom('facebook_appid')|default('284865384904712')}}";
                fjs.parentNode.insertBefore(js, fjs);
            }(document, 'script', 'facebook-jssdk'));
        </script>
        
        <!-- Social networks : Twitter -->
        <script type="text/javascript">!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs); }}(document,"script","twitter-wjs");</script>
        
        <!-- jQuery onReady -->
        <script type="text/javascript">
            jQuery(document).ready(function() {
                // Fancy box
                {% if isSingle %}
                    jQuery('.ob-section-images .ob-img').parent('a').attr('rel', 'fancyGroup');
                {% endif%}
                jQuery(".ob-section-images .ob-img").parent('a').add(".fancybox").fancybox({
                    'overlayShow'	: true,
                    'transitionIn'	: 'elastic',
                    'transitionOut'	: 'elastic',
                    'type': 'image'
                });
                
                (function() {
                    {% if Custom('custom_hide_widget_search_form') == false %}
                        // HTML5 placeholder fallback
                        function isPlaceholderSupported() {
                            'use strict';
                            var o = document.createElement('input');
                            return 'placeholder' in o;
                        }
                        function initPlaceHolder(el){
                            if(jQuery.trim(el.val()) === '' || jQuery.trim(el.val()) === el.attr('placeholder')){
                                el.val(el.attr('placeholder'));
                                el.css({'color': '#999'});
                            }
                        }
                        function togglePlaceholder(el, submitMode) {
                            'use strict';
                            var v = jQuery.trim(el.val()), p = el.attr('placeholder');
                            if (v === '' && !submitMode) {
                                el.val(p);
                                el.css({'color': '#999'});
                            } else if (v === p) {
                                el.val('');
                            }
                        }
                        function emulatePlaceholder(form) {
                            'use strict';
                            if (!isPlaceholderSupported()) {
                                jQuery('input[placeholder]', form).each(function () {
                                    initPlaceHolder(jQuery(this));
                                }).focus(function () {
                                    togglePlaceholder(jQuery(this), false);
                                }).blur(function () {
                                    initPlaceHolder(jQuery(this));
                                });
                                form.submit(function () {
                                    jQuery(this).find('input[placeholder]').each(function () {
                                        togglePlaceholder(jQuery(this), true);
                                    });
                                });
                            }
                        }
                        
                        // Search form
                        function obSearchForm() {
                            'use strict';
                            var i= 0, form = jQuery('form.search');
                            if (form.length) {
                                form.each(function () {
                                    emulatePlaceholder($(this));
                                    var qInput = jQuery('input[name=q]', $(this));
                                    if (qInput.length) {
                                        $(this).submit(function (e) {
                                            e.preventDefault();
                                            window.location = jQuery(this).attr('action') + qInput.val();
                                        });
                                    }
                                });
                            }
                        }
                        obSearchForm();
                    {% endif%}
                    
                    // Archives
                    {% if Custom('custom_hide_widget_archives') == false %}
                        {% list Blog.Archives %}
                            switch_arch('{{Archive.year}}');
                        {% endlist %}
                    {% endif%}
                })();
            });
        </script>
    </body>
