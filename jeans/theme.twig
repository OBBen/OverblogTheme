                            <h2>{{ Lang.Get('Follow us') }}</h2>
                            <div class="profile clearfix">
                                
                                {% if Custom('facebook_account') is not empty %}
                                    <a class="follow facebook" href="http://facebook.com/{{ Custom('facebook_account') }}" title="{{ Lang.Get('Follow us on') }} Facebook">{{ Lang.Get('Follow us on') }} Facebook</a>                              
                                {% endif %}
