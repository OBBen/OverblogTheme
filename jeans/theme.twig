                                    <a class="follow rss" href="{{ Blog.RssUrl }}" title="{{ Lang.Get('Follow us with') }} Rss">{{ Lang.Get('Follow us with') }} RSS</a>
                            </div>
                        </li>
                        {% endif %}
                    </ul>
                </div><!-- sidebar -->
            </div>
            <div id="contentBot"></div>
        </div>
        <!--content end-->
    
