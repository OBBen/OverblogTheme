                                <a href="{{ Blog.Url }}" title="{{ Lang.Get('Home') }}">
                                    {{ Lang.Get('Home') }}
                                </a>
                            </li>
                        {% if Blog.ListPages is not empty %}
                            {% list Blog.ListPages %}
                                <li class="current_page_item">
                                    <a href="{{ Blog.Url }}/{{ ListPage.Url }}" title="{{ ListPage.Title }}">
                                        {{ ListPage.Title }}</a>
                                </li>
                            {% endlist %}
