                <img src="{{ Custom('blog_cover') | resize(960,302) | crop }}" width="960" height="302" alt="" />
            {% endif %}
        </div>
    
        <div class="wrapper">
            <div id="contentTop"></div>
            <div id="container">
                <div class="main">
    
                    {# List title #}
                    {% if isSearch %}
                        <h1 class="list-title"> {{ Lang.Get ('Search for') }} "{{ Search.Keyword }}”</h1>
                    {% elseif isTag %}
                        <h1 class="list-title"> {{ Lang.Get('Posts with') }}#<strong>{{ Tag.Title }}</strong> tag</h1>
                    {% elseif isSpecial %}
                        <h1 class="list-title">{{ Lang.Get('Contact us') }}</h1>
                    {% endif %}
    
                    {# Posts #}
                    {% if Posts is empty %}
    
                    {% if isSearch %}
                    <div class="contenuArticle">
                        <p>
                            {{ Lang.Get('No result… Try again') }} !
                        </p>
                        <form action="/search" method="post">
                            <input type="text" name="q" value="{{ Lang.Get('Search') }}" placeholder="{{ Lang.Get('Search') }}" />
                            <button type="submit">{{ Lang.Get('Ok') }} !</button>
                        </form>
                    </div>
                    {% elseif isSpecial %}
                        {{ SpecialContent }}
                    {% else %}
                    <div class="contenuArticle">
                        <p>
                            {{ Lang.Get('No post') }}…
                        </p>
                    </div>
                    {% endif %}
    
                    {% else %}
    
                    {% list Posts %}
    
                    <div class="post-wrapper">
                        <div class="time">
                            <time datetime="{{ Post.Date }}">
                                <span class="month">{{ Post.Date | date('M') }}</span><br />
                                <span class="white">{{ Post.Date | date('j') }}</span>
                            </time>
                        </div>
                        <div class="post-{{ loop.index }} post">
                            <h{% if isSingle %}1{% else %}2{% endif %} class='post-title'>
                                <a href="{{ Post.Permalink }}" rel="bookmark" title="{{ Post.Title | default(Post.Snippet | truncate(100)) }}">{{ Post.Title | default(Post.Snippet | truncate(100)) }}</a>
                            </h{% if isSingle %}1{% else %}2{% endif %}>
                            <div class="entry-summary">
                                <div class="postmetadata">
                                    {% if Post.Author is not empty %}
                                        {{ Lang.Get('Published by') }} {{ Post.Author | default(Blog.Owner.Nickname) }} |
                                    {% endif %}
                                    {{ Post.Date | date('l, F d, Y') }}
                                    {% if Custom("comment") == "Disqus" and Custom('comment_disqus') is not empty %}
                                        | <a href="{{ Blog.Url }}{{ Post.PermaLink }}#disqus_thread" title="{{ Lang.Get('comments') }}" class="post-comments"></a>
                                    {% else %}
                                        | <a href="{{ Post.PermaLink }}#comments" title="{{ Lang.Get('comments') }}" class="post-comments">
                                            {% if Custom("comment") == "Facebook" %}
                                                <fb:comments-count href="{{ Blog.Url }}{{ Post.Permalink }}"></fb:comments-count>
                                                {{ Lang.Get('comments') }}
                                            {% else %}
                                                {{ Post.CommentCount(Lang.Get('comment'), Lang.Get('comments')) }}
                                            {% endif %}
                                       </a>
                                    {% endif %}
                                    {% list Post.Tags %}
                                        {% if loop.first is not empty %}
                                         |
                                        {% endif %}
                                        <a class="post-tag" href="{{ Tag.Url }}">
                                            #{{ Tag.Title }}
                                        </a>
                                        {% if not loop.last %}
                                            , 
                                        {% endif %}
                                    {% endlist %}
                                </div>
    
                                {% if isSingle %}
                                    <div class="entry">
                                        <article>
                                            {{ Post.Body }}
                                        </article>
                                        {% if Custom ('share_button') is not empty %}
                                            <div class="share">
                                                <h4 class="h4commentMessage">{% if isPage == false %}{{ Lang.Get('Share this post') }}{% else %}{{ Lang.Get('Share this page') }}{% endif %}</h4>   
                                                {%if Custom ('share_button') == 'Facebook' %}
                                                <div class="fb-like" data-href="{{ Blog.Url }}{{ Post.PermaLink }}" data-send="true" data-layout="button_count" data-width="120" data-show-faces="true" data-font="lucida grande"></div>
                                                {% elseif Custom ('share_button') == 'Twitter' %}
                                                <a href="https://twitter.com/share" class="twitter-share-button" data-text="{% if Post.Title is not empty %}{{ Post.Title }}{% elseif Post.Snippet is not empty %}{{ Post.Snippet}}{% else %}{{ Blog.Title }}{% endif %}" data-url="{{ Blog.Url }}{{ Post.PermaLink }}" data-lang="{{ Blog.Lang }}" {% if Custom('twitter_account') is not empty %} data-via="{{Custom('twitter_account')}}"{% endif %}></a>
                                                {% elseif Custom ('share_button') == 'Google +' %}
                                                <g:plusone href="{{ Blog.Url }}{{ Post.Permalink }}" size="medium"></g:plusone>
                                                {% elseif Custom ('share_button') == 'All' %}
                                                <div class="fb-like" data-href="{{ Blog.Url }}{{ Post.PermaLink }}" data-send="false" data-layout="button_count" data-width="120" data-show-faces="true" data-font="lucida grande"></div>
                                                <a href="https://twitter.com/share" class="twitter-share-button" data-text="{% if Post.Title is not empty %}{{ Post.Title }}{% elseif Post.Snippet is not empty %}{{ Post.Snippet}}{% else %}{{ Blog.Title }}{% endif %}" data-url="{{ Blog.Url }}{{ Post.PermaLink }}" data-lang="{{ Blog.Lang }}" {% if Custom('twitter_account') is not empty %} data-via="{{Custom('twitter_account')}}"{% endif %}></a>
                                                <g:plusone href="{{ Blog.Url }}{{ Post.Permalink }}" size="medium"></g:plusone>
                                                {% endif %}
                                            </div>
                                        {% endif %}
                                        {% if isPage == false %}
                                            <div id="comments">
                                                {% if Custom("comment") == "Facebook" %}
                                                    <div class="fb-comments" data-href="{{ Blog.Url }}{{ Post.Permalink }}" data-num-posts="2" data-width="676"></div>
                                                {% elseif Custom("comment") == "Disqus" and Custom('comment_disqus') is not empty %}
                                                    <div id="disqus_thread"></div>
                                                    <script type="text/javascript">
                                                        var disqus_shortname = '{{ Custom('comment_disqus') }}';
                                                        (function() {
                                                            var dsq = document.createElement('script'); 
                                                            dsq.type = 'text/javascript'; 
                                                            dsq.async = true;
                                                            dsq.src = 'http://' + disqus_shortname + '.disqus.com/embed.js';
                                                            (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
                                                        })();
                                                    </script>
                                                    <noscript>Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
                                                {% else %}
                                                    {{Post.Comments}}
                                                {% endif %}
                                            </div>
                                        {% endif %}
                                    </div>
                                {% else %}
                                    {% list Post.Sources %}
                                        {% if Source != "TW" %}
                                            <div class="entry-thumbnails">
                                                <div class="entry-thumbnailsBg"></div>
                                                <a href="{{ Post.Permalink }}" title="{{ Lang.Get('More about') }} {% if Post.Title is not empty %}&quot;{{ Post.Title }}&quot;{% else %}{{ Lang.Get('this post') }}{% endif %}">
                                                {% if Post.Cover is not empty %}
                                                    <img src="{{ Post.Cover | resize(145, 130) | crop }}" alt="thumbnail" width="145" height="130" />
                                                {% else %}
                                                    <img src="{{ Custom('post_cover') | resize(145, 130) | crop }}" alt="thumbnail" width="145" height="130" />
                                                {% endif %}
                                                </a>
                                            </div>
                                        {% endif %}
                                    {% endlist %}
                                    
                                    <div class="entry">
                                        {% list Post.Sources %}
                                            {% if Source != "TW" %}
                                                {{ Post.Snippet }}
                                            {% else %}
                                                {{ Post.Body(1) }}        
                                            {% endif %}
                                        {% endlist %}
                                        <p class="quick-read-more">
                                            <a href="{{ Post.Permalink }}" title="{{ Post.Title }}">{{ Lang.Get('Read more') }}</a>
                                        </p>
                                    </div>
                                    <div class="cb"></div>
                                {% endif %}
                            </div>
                        </div>
                        <!--post end-->
                    </div>
    
                    {% endlist %}
    
                    {% endif %}
    
                    {% if isPage == false %}
                        {% if Navigation.PreviousPage is not empty or Navigation.NextPage is not empty or Navigation.PreviousPost is not empty or Navigation.NextPost is not empty %}
                            <div class="before_articles">
                                <div class="pagination clearfix">
                                    {% if Navigation.PreviousPage is not empty %}
                                        <a href="{{ Navigation.PreviousPage }}" class="previous">{{ Lang.Get('Previous page') }}</a>
                                    {% elseif Navigation.PreviousPost is not empty %}
                                         <a class="previous" href="{{ Navigation.PreviousPost.Permalink }}" title="{{ Navigation.PreviousPost.Title }}">{{ Lang.Get('Previous post') }}</a>
                                    {% endif %}
            
                                    {% if Navigation.NextPage is not empty %}
                                        <a href="{{ Navigation.NextPage }}" class="next">{{ Lang.Get('Next page') }}</a>
                                    {% elseif Navigation.NextPost is not empty %}
                                         <a href="{{ Navigation.NextPost.Permalink }}" class="next" title="{{ Navigation.NextPost.Title }}">{{ Lang.Get('Next post') }}</a>
                                    {% endif %}
                                </div>
                            </div>
                        {% endif %}
                    {% endif %}
                </div>
                <!--main end-->
    
                <div id="sidebar">
                    <ul>
                        {# Blog profile #}
                        {% if Custom('display_widget_profile') == false %}
                        <li>
                            <h2><a href="{{ Blog.Url }}">{{ Blog.Title | truncate(15) }}</a></h2>
                            <div class="profile clearfix">
                                {% if Blog.Avatar is not empty %}
