	<body>
		<div id="global">
			<div id="header-wrapper">
				<div id="header-inner">
					<div id="blog-title">
						<h1><a href="{{ Blog.Url }}" title="{{ Blog.Description }}">{{ Blog.Title }}</a></h1>
					</div>
					<div id="blog-description">
						<p>{{ Blog.Description }}</p>
					</div>
				</div>
			</div>
			<!-- shortcut:[Single Page] -->
			<div id="main-wrapper">
			{% if isSingle %}
				<div class="post-index">
					<div class="post-date-index">
						<p>{{ Post.Date|datel(Lang.Get('Default date format')) }}</p>
					</div>
					<div class="post-title-index">
						<h2><a href="{{ Post.Permalink }}" title="{{ Lang.Get('More about') }} {% if Post.Title is not empty %}&quot;{{ Post.Title }}&quot;{% else %}{{ Lang.Get('this post') }}{% endif %}">{% if Post.Title is not empty %}{{ Post.Title }}{% else %}{{ Lang.Get('A post from') }} {% list Post.Sources %}{{ Lang.Get(Source) }}{% if not loop.last %}{{ Lang.Get('and') }} {% endif %}{% endlist %}{% endif %}</a></h2>
					</div>
					<div class="post-author-index"><span>{{ Lang.Get('by') }}</span> {{ Post.Author.Nickname | default(Blog.Owner.Nickname) }}</div>
					{% if Post.Tags is not empty %}
						<div class="post-tag-index">
						{% list Post.Tags %}
							{% if loop.first %}
								<span>posted in</span>
							{% else %}
							{% endif %} 
							<a href="{{ Tag.Url }}">{{ Tag.title }}</a>
							{% if loop.last %}{% else %}
								, 
							{% endif %}
						{% endlist %}
						</div>
					{% endif %}
					<div class="post-body-index">
						{{ Post.Body }}
					</div>
					<div class="share">
                		<h4>{% if isPage == false %}{{ Lang.Get('Share this post') }}{% else %}{{ Lang.Get('Share this page') }}{% endif %}</h4>
						<div class="fb-like" data-href="{{ Blog.Url }}{{ Post.PermaLink }}" data-send="true" data-layout="button_count" data-width="120" data-show-faces="true" data-font="lucida grande"></div>
						<a href="https://twitter.com/share" class="twitter-share-button" data-text="{% if Post.Title is not empty %}{{ Post.Title }}{% elseif Post.Snippet is not empty %}{{ Post.Snippet}}{% else %}{{ Blog.Title }}{% endif %}" data-url="{{ Blog.Url }}{{ Post.PermaLink }}" data-lang="{{ Blog.Lang }}" {% if Custom('twitter_account') is not empty %} data-via="{{Custom('twitter_account')}}"{% endif %}></a>
						<g:plusone size="medium"></g:plusone>
		         	</div>
		         	{% if isPage == false and Post.ShowComments is not empty %}
		         	<div class="item-comments">
		         		<h4>{{ Lang.Get('Comment this post') }}</h4>
					    {% if Custom("comment") == "Facebook" %}
					    <div class="fb-comments" data-href="{{ Blog.Url }}{{ Post.Permalink }}" data-num-posts="2" data-width="600"></div>
					    {% elseif Custom("comment") == "Disqus" and Custom('comment_disqus') is not empty %}
					        <div id="disqus_thread"></div>
					        <script type="text/javascript">
					        var disqus_shortname = '{{ Custom('comment_disqus') }}';
					
					        (function() {
					        var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
					        dsq.src = 'http://' + disqus_shortname + '.disqus.com/embed.js';
					        (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
					        })();
					        </script>
					        <noscript>{{ Lang.Get('Please enable JavaScript to view the') }} <a href="http://disqus.com/?ref_noscript">{{ Lang.Get('comments powered by') }} Disqus.</a></noscript>
					    {% else %}
					        {{Post.Comments}}
					    {% endif %}
					</div>
					{% endif %}		
				</div>
				
			<!-- shortcut:[Search Page] -->
			{% elseif isSearch %}
				{% if isSearch and Posts is empty %}
					<div class="post-index">
						<div class="post-title-index">
							<h2>{{ Lang.Get('Search results for') }} "{{ Search.Keyword }}"</h2>
						</div>
						<div class="post-body-index">
							<p>{{ Lang.Get('No result for this expression') }}.</p>
						</div>
					</div>
				{% else %}
					{% list Posts %}
						<div class="post-index">
							<div class="post-date-index">
								<p>{{ Post.Date|datel(Lang.Get('Default date format')) }}</p>
							</div>
							<div class="post-title-index">
								<h2>
									<a href="{{ Post.Permalink }}" title="{{ Lang.Get('More about') }} {% if Post.Title is not empty %}&quot;{{ Post.Title }}&quot;{% else %}{{ Lang.Get('this post') }}{% endif %}">
									{% if Post.Title is not empty %}
										{{ Post.Title }}
									{% else %}
										{{ Lang.Get('A post from') }} 
										{% list Post.Sources %}
											{{ Lang.Get(Source) }}
											{% if not loop.last %}
												{{ Lang.Get('and') }} 
											{% endif %}
										{% endlist %}
									{% endif %}
									</a>
								</h2>
								{% if Post.Cover is not empty %}
									<a href="{{Post.Permalink}}" title="{{ Lang.Get('More about') }} {% if Post.Title is not empty %}&quot;{{ Post.Title }}&quot;{% else %}{{ Lang.Get('this post') }}{% endif %}">
										<img class="post-cover" src="{{ Post.Cover | resize(600) | crop }}" alt="" title="" />
									</a>
								{% endif %}
							</div>
							<div class="post-author-index"><span>{{ Lang.Get('by') }}</span> {{ Post.Author.Nickname | default(Blog.Owner.Nickname) }}</div>
						{% if Post.Tags is not empty %}
							<div class="post-tag-index">
								{% list Post.Tags %}
									{% if loop.first == true %}
										<span>{{ Lang.Get('posted in') }}</span>
									{% else %}
								{% endif %} 
								<a href="{{ Tag.Url }}">{{ Tag.title }}</a>
									{% if loop.last %}
									{% else %}, 
									{% endif %}
