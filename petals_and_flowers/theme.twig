                border-top: dotted 1px #C4C7D0;
                padding: 7px 7px 0 0;
            }
            {% if Custom("custom_page_theme_color") is not empty %}
                a,
                #logo h1 a,
                .post .title a,
                #sidebar h2 {
                    color: {{ Custom("custom_page_theme_color") }};
                }
                #menu .current_page_item a,
                #menu a:hover{
                    background: {{ Custom("custom_page_theme_color") }};
                }
            {% endif %}
            {% if Custom("custom_page_background") is not empty %}
                body{
                    background: url({{ Custom("custom_page_background") }}) repeat 0 0;
                }
            {% endif %}
        </style>
        
