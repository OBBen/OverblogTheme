<!DOCTYPE html>
<html lang="{{ Blog.Lang|default('en') }}">
    <head>
        <!-- shortcut:[Meta] -->
        <!-- title, description, keyword, robots -->
        {% if isSingle%}
            {% list Posts %}
                <title>{% if Post.Title is not empty %}{{ Post.Title }} - {% elseif Post.Snippet is not empty %}{{ Post.Snippet|truncate(80) }} - {% endif %}{{Blog.Title}}</title>
                <meta name="description" content="{{ Post.Snippet }}" />
                <meta name="keywords" content="{% list Post.Tags %}{{ Tag.Title }}{% if loop.last == false %}, {% endif %}{% endlist %}" />
                <meta name="robots" content="index,follow" />
            {% endlist %}
        {% elseif isTag and Tag is not empty %}
            <title>{{ Tag.Title|title }} - {{Blog.Title}}</title>
            <meta name="description" content="{{ Blog.Description }}" />
            <meta name="keywords" content="{{ Tag.Title|title }}" />
            <meta name="robots" content="index,follow" />
        {% elseif isSearch and Search is not empty %}
            <title>{{ Search|title }} - {{Blog.Title}}</title>
            <meta name="description" content="{{ Blog.Description }}" />
            <meta name="keywords" content="{{ Search|title }}" />
            <meta name="robots" content="noindex" />
        {% else %}
            <title>{{Blog.Title}}</title>
            <meta name="description" content="{{ Blog.Description }}" />
            <meta name="robots" content="index,follow" />
        {% endif %}
        <meta http-equiv="content-type" content="text/html; charset=utf-8" />


        <!-- Social setting : Facebook, G+ .. -->
        <meta property="og:site_name" content="{{ Blog.Title }}" />
        <meta property="og:type" content="blog" />
        <meta property="fb:app_id" content="{% if Custom('facebook_appid') is not empty %}{{ Custom('facebook_appid') }}{% endif %}" />
        <meta itemprop="name" content="{{ Blog.Title }}" />

        {% if isSingle %}
            {% list Posts %}
                <meta property="og:title" content="{% if Post.Title is not empty %}{{ Post.Title }} - {% elseif Post.Snippet is not empty %}{{ Post.Snippet|truncate(80) }}{% endif %}"/>
                <meta property="og:description" content="{{ Post.Snippet }}" />
                <meta itemprop="description" content="{{ Post.Snippet }}" />
                <meta property="og:url" content="{{ Blog.Url }}{{ Post.Permalink }}" />
                {% if Post.Cover %}
                    <meta property="og:image" content="{{ Post.Cover }}"/>
                    <meta itemprop="image" content="{{ Post.Cover }}" />
                {% endif %}
            {% endlist %}
            <meta property="og:type" content="overblogkiwi:see" />
        {% else %}
            <meta property="og:title" content="{{ Blog.Title }}"/>
            <meta property="og:description" content="{{ Blog.Description }}" />
            <meta itemprop="description" content="{{ Blog.Description }}" />
            {% if Blog.Avatar %}
            <meta property="og:image" content="{{ Blog.Avatar }}"/>
            <meta itemprop="image" content="{{ Blog.Avatar }}" />
            {% else %}
                {% list Posts %}
                {% if loop.index == 1 and Post.Cover %}
            <meta property="og:image" content="{{ Post.Cover }}"/>
            <meta itemprop="image" content="{{ Post.Cover }}" />
                {% endif %}
                {% endlist %}
            {% endif %}

            {% if isSearch %}
                <meta property="og:type" content="overblogkiwi:search" />
            {% else %}
                <meta property="og:type" content="overblogkiwi:visit" />
            {% endif %}
        {% endif %}

        <!-- shortcut:[Options] -->
	    <meta name="constant:displayArticlesLimit" content="4" />
	    
	    <meta name="image:custom_thumbnail:Custom default thumbnail" />
	    
	    <meta name="string:nav_1_title:Title navigation item 1" group="Navigation" />
		<meta name="string:nav_1_link:URL navigation item 1" group="Navigation" />
		<meta name="string:nav_2_title:Title navigation item 2" default="About" group="Navigation" />
		<meta name="string:nav_2_link:URL navigation item 2" default="/about" group="Navigation" />


		<meta name="boolean:display_widget_last:Hide Widget &quot;Last posts&quot;" group="Widgets" />
		<meta name="boolean:display_widget_tags:Hide Widget &quot;Tags&quot;" group="Widgets" />
		<meta name="boolean:display_widget_archives:Hide Widget &quot;Archives&quot;" group="Widgets" />

		<meta name="boolean:display_widget_social:Hide Widget &quot;Social&quot;" group="Social" />
		<meta name="string:facebook_account:Enter your Facebook Account" default="overblog" group="Social" />
		<meta name="string:twitter_account:Enter your Twitter Account" default="overblog" group="Social" />
		
		<meta name="list:comment:Comment service" items="OverBlog, Facebook, Disqus" default="OverBlog" group="Comment" />
		<meta name="string:comment_disqus:Disqus account" default="obcomment" group="Comment" />
		
        <meta name="string:facebook_appid:Enter your FaceBook App ID" group="Settings" />
        <meta name="string:google_analytics:Enter your Google Analytics ID" group="Settings" />
        <meta name="string:google_webmaster_id:Enter your Google Webmaster Tools ID" group="Settings" />
        <meta name="string:msn_webmaster_id:Enter your MSN Webmaster Tools ID" group="Settings" />
		 
        <!-- shortcut:[Includes] -->
        <!-- favicon -->       
        {% if Blog.FaviconUrl is not empty %}
            <link rel="icon" type="image/png" href="{{ Blog.FaviconUrl }}" />
        {% else %}
            <link rel="shortcut icon" type="image/x-icon" href="http://fdata.over-blog.net/99/00/00/01/img/favicon.ico" />
            <link rel="icon" type="image/png" href="http://fdata.over-blog.net/99/00/00/01/img/favicon.png" />
            <link rel="apple-touch-icon" href="http://fdata.over-blog.net/99/00/00/01/img/mobile-favicon.png" />
        {% endif %}   
       
        <!-- SEO -->
        {% if Custom('google_webmaster_id') is not empty %}
            <meta name="google-site-verification" content="{{ Custom('google_webmaster_id') }}" />
        {% endif %}
        {% if Custom('msn_webmaster_id') is not empty %}
            <meta name="msvalidate.01" content="{{ Custom('msn_webmaster_id') }}" />
        {% endif %}

        <!-- includes -->
        <link rel="alternate" type="application/rss+xml" title="RSS" href="{{ Blog.RssUrl }}" />
        {% if Blog.CssUrl is not empty %}
        <link rel="stylesheet" href="{{ Blog.CssUrl }}" type="text/css" />
        {% endif %}
        
        <!-- Fancybox -->
		<link rel="stylesheet" type="text/css" href="http://assets.over-blog-kiwi.com/themes/1/js/fancybox/jquery.fancybox-1.3.4.css" media="screen" />
		<!-- Fonts -->
		<link href="http://fonts.googleapis.com/css?family=Pacifico" rel="stylesheet" type="text/css" />
		<link href="http://fonts.googleapis.com/css?family=Lobster" rel="stylesheet" type="text/css" />
        <!-- shortcut:[Styles] -->		
        <style rel="stylesheet" type="text/css">
			/**********
			** RESET **
			**********/
			* {margin: 0; padding: 0;}
			a, a:hover, a:active, a:active {color: #555555; text-decoration: none; border: none; outline: none;}
			img {border: none; outline: none;}
			
			
			/**********
			** BASIC **
			**********/
			body {width: 100%; background: url('http://vivienkaufinger.com/ob/img/background.png') no-repeat scroll left 255px #FBFAF5;}
			
			.cb {clear: both;}
			.cl {clear: left;}
			.cr {clear: right;}
					
			/********
			** TOP **
			********/
			#top {width: 100%; height: 259px; margin-bottom: 20px; background: url('http://vivienkaufinger.com/ob/img/top.jpg') repeat-x;}
			#header-wrapper {width: 960px; height: 90px; margin: 0 auto; padding: 10px 0 0 0;}
						
			/** title + desctiption **/
			#header-inner {float: left; width: 60%; height: 103px;}
			#header-inner h1 a {display: block; margin-top: -12px; color: #fff; font-size: 40px; font-family: 'Pacifico'; font-weight: normal; text-shadow: 2px 2px 0px #740404;}
			#description {margin-top: 5px;}
			#description p {color: #fff; font-size: 11px; font-family: 'Trebuchet MS',Tahoma,Helvetica,Arial,Sans-serif; text-transform: uppercase; text-shadow: 2px 2px 0 #740404;}
						
			/** menu **/
			#nav {float: right; width: 40%; margin: 20px 0px 0 0;}
			#nav ul {float: right; list-style: none;}
			#nav li {float: left;}
			#nav a {display: block; margin-left: 10px; padding: 10px 15px; background-color: #750005; border: 1px solid #7C1919; color: #fff; font-size: 12px; font-family: Helvetica, Arial, sans-serif;}
			#nav a:hover {background-color: #1E1B1B;}

			#cover {height: 150px; margin: 0 auto;}
			#cover p {float: left; width: 840px; margin-top: 15px; color: #C9C9C9; font-size: 20px; font-family: Tahoma, Helvetica, arial, Sans-serif; line-height: 25px;}
			#cover img {float: right; width: 100px; height: 100px; margin: 19px 0 0;}

			/************
			** CONTENT **
			************/
			#content-wrapper {width: 950px; margin: 0 auto; background-color: #FBFAF5; border: 5px solid #FBFAF5; font-size: 12px; font-family: Tahoma, Halvetica, Arial, Verdana, Sans-serif;}
			#content-inner {margin-top: 20px;}
			
			
			/** SIDEBAR **/
			#sidebar {float: left; width: 280px; {% if isSpecial or isSearch %}margin: 0 0 30px 20px;{% else %}margin: 0 0 0 20px;{% endif %} padding-top: 10px; background: url('http://vivienkaufinger.com/ob/img/sidebar.jpg') repeat-y center top; color: #fff;}
			#sidebar h2 { height: 38px; padding: 5px 20px 0; background: url('http://vivienkaufinger.com/ob/img/sidebar_h2.jpg') no-repeat; text-align: center; color: #786854; font-size: 18px; font-family: 'Lobster',arial,serif; font-weight: normal; text-transform: capitalize; text-shadow: 1px 1px 0px #F2F1DB;}
			#sidebar ul {padding: 5px 20px 30px; list-style: none;}
			
			.search-form {width: 200px; margin: 20px auto;}
			#search input[type="text"] {width: 120px; height: 20px;}
			#search input[type="submit"] {float: right; padding: 5px 14px; background-color: #750005; border: none; color: #fff; font-size: 12px; font-family: Helvetica, Arial, sans-serif;}
			#search input[type="submit"]:hover {background-color: #1E1B1B; cursor: pointer;}
			
			#last-posts li {margin-bottom: 4px; padding: 0px 0 7px; border-bottom: 1px dotted #DDDDDD; line-height: 18px;}
			#last-posts img {float: left; padding: 5px 10px 15px 0;}
			#last-posts a, #last-posts a:visited, #social a, #social a:visited, .plustext {display: block; padding: 2px 0 3px; color: #fff; font-weight: bold; text-shadow: 1px 1px 0px #9C957F;}
			#last-posts a:hover, #social a:hover {text-decoration: underline;}
			
			#tags {margin: 5px 0; padding: 5px 20px 20px; text-align: center;}	
			#tags a {color: #fff; text-transform: capitalize; text-shadow: 1px 1px 0px #9C957F;}	
			#tags a:hover {text-decoration: underline;}	
			.tag-size-1 {font-size: 10px;}	
			.tag-size-2 {font-size: 19px; text-transform: capitalize; text-shadow: 1px 1px 0px #9C957F;}
			
			.fb, .twt, .rss {display: block; height: 20px; margin-bottom: 10px; padding-left: 25px; background: url('http://www.vivienkaufinger.com/ob/img/pionner-social.png') no-repeat;}
			.fb {background-position: left 0;}
			.twt {background-position: left -20px;}
			.rss {background-position: left -40px;}
			
			.archivelist {padding: 5px 20px 15px;} 
			.plustext:hover {color: #FFF; text-decoration: underline;}
			
			/** POSTS LIST **/
			#content {float: right; width: 650px;}
			#post-list {padding: 0 10px 0 0;}
			.post-block {margin: 20px 0 20px 40px;}
			.post-title h3 a {display: block; color: #424242; font-size: 30px; font-family: 'Lobster'; font-weight: normal; text-transform: capitalize; letter-spacing: -1px;}
			.post-title h3 a:hover{color: #000;}
			.post-infos {float: left; width: 150px; margin-top: 25px; text-align: right;}
			.post-infos ul {display: block; list-style: none;}
			.post-infos li {border-bottom: 1px solid #DDDDDD; font-size: 11px; line-height: 20px;}
			.post-infos li a {color: #797979;}
			.post-infos li a:hover {text-decoration: underline;}
			.post-infos .author, .date, .tags {text-transform: capitalize;}
			.list-post-body {float: right; width: 439px; margin: 20px auto; padding: 10px 0; border-left: 1px solid #DDDDDD;}
			.post-cover {float: right; width: 410px; height: 140px; margin-bottom: 10px; border: 5px solid #DDDDDD;}
			.post-cover:hover {border: none; padding: 5px;}
			.post-cover img {width: 410px; height: 140px;}
			.post-snippet {width: 410px; margin-left: 20px; text-align: left; line-height: 19px;}
			.read-more {display: block; margin: 13px 0 0 20px; color: #797979; font-weight: bold; text-transform: capitalize;}
			.read-more:hover {color: #797979; text-decoration: underline;}


			/** SINGLE POST **/
			#post-details {padding: 0 10px 0 0;}
			.post-content {float: right; width: 439px; margin: 20px auto; padding: 10px 0; border-left: 1px solid #DDDDDD;}
			#post-body {margin: 0 0 0 20px;}
			#post-body h1 {margin: 0 0 10px 20px; font-size: 24px;}
			#post-body h2 {margin: 0 0 10px 20px; font-size: 14px;}
			#post-body h3 {margin: 0 0 10px 20px; font-size: 12px; text-transform: uppercase;}
			#post-body h4 {margin: 0 0 10px 20px; font-size: 12px;}
			#post-body h5 {margin: 0 0 10px 20px; font-size: 10px;}
			#post-body h6 {margin: 0 0 10px 20px; font-size: 8px;}
			
			/* Sections */
			.ob-section-text, .ob-section-images, .ob-section-video, .ob-section-audio, .ob-section-quote, .ob-row-1-col, .ob-row-2-col, .ob-section-map, ob-section-file {width: 420px;}
			
			/* Medias */
	        .ob-cell, .ob-img, .ob-video, {max-width: 420px;}
			
			/* Section texte */
			.ob-text, .ob-quote, .ob-link {hyphens: auto; word-wrap: break-word;}
			.ob-text h2, h3, h4, h5 {margin: 10px 0 5px; font-weight: 500;}
			.ob-text h2 {font-size: 24px; line-height: 24px;}
	        .ob-text h3 {font-size: 18px; line-height: 18px;}
	        .ob-text h4 {font-size: 16px; line-height: 16px;}	
	        .ob-text h5 {font-size: 14px; line-height: 14px;}
			.ob-text ol {margin-left: 30px;}
			.ob-text ul {margin-left: 20px;}
			.ob-text a, .ob-text a:visited, .ob-link, .ob-author {color: #797979; text-decoration: underline;}
			.ob-text a:hover, .ob-link:hover, .ob-author:hover {text-decoration: none;}
			.ob-text pre {width: 100%; margin-bottom: 10px; white-space: pre-wrap; white-space: -moz-pre-wrap; white-space: -pre-wrap; white-space: -o-pre-wrap; word-wrap: break-word; overflow: auto;}
			.ob-desc {clear: both; font-size: 11px; font-style: italic;}
			.ob-quote {max-width: 100%;  font-size: italic;}
				        
	        /* Section map */
	        .ob-section-map .ob-map, .ob-section-map .ob-desc {width: 420px;}
	        
	        /* Section image */
			.ob-row-1-col img {width: 420px;}
			.ob-row-2-col img {width: 50%;}
			.ob-row-3-col img {width: 33.3%;}
			.ob-section-images .ob-slideshow, .ob-slideshow, .yui3-slideshow-content, .yui3-slideshow-content .ob-img {width: 420px;}
			.ob-section-images .ob-slideshow, .ob-slideshow, .yui3-slideshow-content, .yui3-slideshow-content {height: 320px;}
			
			/* Section audio */
			.ob-section-audio .obsoundplayer .obsoundplayername {height: 31px; width: 50px; overflow: hidden; font-size: 12px;}
			
			/* Section video */
			.ob-video iframe {width: 420px;}
			
			/* Section file */
			.ob-section-file {margin-left: 0;}
			
			.share, .item-comments {width: 600px; margin: 30px 0 0 10px;}
			.share h4, .item-comments h4 {margin: 0 0 10px; color: #555; font-size: 16pt; font-family: 'Lobster'; font-weight: normal;}
			.fb-like iframe {margin-top: -3spx;}
			
			/** CONTACT **/
			.special-title {display: block; color: #424242; font-size: 30px; font-family: 'Lobster'; font-weight: normal; text-transform: capitalize; letter-spacing: -1px;}
			.ob-input-text, .ob-input-email {height: 20px;}
			.ob-input-submit {padding: 5px 15px; background-color: #750005; border: 1px solid #7C1919; color: #fff; font-size: 12px; font-family: Helvetica, Arial, sans-serif;}
			.ob-input-submit:hover {background-color: #1E1B1B; cursor: pointer;}
			
			/** SEARCH RESULTS **/
			.search-title {display: block; color: #424242; font-size: 20px; font-weight: normal; text-transform: capitalize; letter-spacing: -1px;}
			
			/*****************
			** NAV + FOOTER **
			*****************/
			#footer-nav {float: right; width: 600px; border-top: 1px solid #DDDDDD; color: #797979; font-size: 14px; font-family: 'Lobster'; text-transform: capitalize;}
			#pagination {padding: 10px 0;}
			#pagination a {color: #797979; font-size: 16px;}
			#pagination a:hover {color: #1E1B1B;}
			.prev {float: left;}
			.next {float: right;}

			#footer {width: 100%; padding: 15px 0; border-top: 1px solid #DDDDDD; color: #999999; font-size: 11px; text-align: center; text-transform: capitalize;}
			#footer span {text-transform: lowercase;}
			#footer a {color: #AAAAAA;}
			#footer a:hover {text-decoration: underline;}
		</style>
	</head>
	<body>
		<!-- HEADER + MENU -->
		<div id="top">
			<div id="header-wrapper">
				<div id="header-inner">
					<h1><a href="{{ Blog.Url }}" title="{{ Blog.Description }}">{{ Blog.Title | truncate(27) }}</a></h1>
					<div id="description">
						<p>{{ Blog.Description | truncate(100) }}</p>
					</div>
				</div>
				<div id="nav">
					<ul>
						<li><a href="{{ Blog.Url }}" title="{{ Blog.Description }}">{{ Lang.Get('Home') }}</a></li>
						{% if Custom('nav_1_link') is not empty %}
						<li><a href="{{ Custom('nav_1_link')}}">{{ Custom('nav_1_title') }}</a></li>
						{% endif %}
						{% if Custom('nav_2_link') is not empty %}
						<li><a href="{{ Custom('nav_2_link')}}">{{ Custom('nav_2_title') }}</a></li>
						{% endif %}
						<li><a href="{{ Blog.Url }}/contact">{{ Lang.Get('Contact') }}</a></li>
					</ul>
				</div>
				<div class="cb"></div>
				
				<div id="cover">
					<p>{{ Blog.Owner.Bio }}</p>
					{% if Blog.Owner.Avatar is not empty %}
					<a class="avatar" href="{{ Blog.Owner.Avatar }}" title="{{ Blog.Owner.Nickname }}">
						<img src="{{ Blog.Owner.Avatar }}" alt="{{ Blog.Owner.Nickname }}" title="" height="128" />
					</a>
					{% else %}
					{% endif %}
					<div class="cb"></div>
				</div>
			</div>
		</div>
		<!-- CONTENT -->
		<div id="content-wrapper">
			<div id="content-inner">
				<!-- sidebar -->
				<div id="sidebar">
					<div id="search">
						<h2>{{ Lang.Get('Search') }}</h2>
						<form action="/search/" method="post" class="search-form">
							<input type="text" placeholder="{{ Lang.Get('Keywords...') }}" value="{{ Lang.Get('Keywords...') }}" name="q" />
							<input type="submit" value="Search" />
						</form>
					</div>
					
					{% if Custom('display_widget_last') != true and Blog.Posts is not empty %}	
					<div id="last-posts">
						<h2>{{ Lang.Get('Last Posts') }}</h2>
						<ul>
							{% list Blog.Posts(3) %}
							<li>
								<a title="{{ Lang.Get('More about') }} {% if Post.Title is not empty %}&quot;{{ Post.Title }}&quot;{% else %}{{ Lang.Get('this post') }}{% endif %}" href="{{ Post.PermaLink }}">
									<img src="{% if Post.Cover is not empty %}{{ Post.Cover|resize(72) }}{% else %}{{ 'http://upload.wikimedia.org/wikipedia/commons/7/71/LogoOverblog.gif'|resize(72) }}{% endif %}" alt="" title="" width="72" height="72"/>
								</a>
								<a class="popular-title" title="{{ Lang.Get('More about') }} {% if Post.Title is not empty %}&quot;{{ Post.Title }}&quot;{% else %}{{ Lang.Get('this post') }}{% endif %}" href="{{ Post.PermaLink }}">{% if Post.Title is not empty %}{{ Post.Title|truncate(24) }}{% else %}{{ Lang.Get('From') }}{% list Post.Sources %}{{ Lang.Get(Source) }}{% if not loop.last %}{{ Lang.Get('and') }} {% endif %}{% endlist %}{% endif %}</a>
								<p class="popular-snippet">{{ Post.Snippet }}</p>
								<div class="cb"></div>
							</li>
							{% endlist %}
						</ul>
					</div>
					{% endif %}
					
					{% if Custom('display_widget_tags') != true and Blog.PostsTags is not empty %}
					<div id="category">
						<h2>{{ Lang.Get('Categories') }}</h2>
						<div id="tags">
							{% list Blog.PostsTags(10, count) %}
							<span class="{% if loop.index is odd %}tag-size-1{% else %}tag-size-2{% endif %}"><a href="{{ PostsTag.Url }}">{{ PostsTag.Title }}</a></span>
							{% endlist %}
						</div>
					</div>
					{% endif %}
					
					{% if Custom('display_widget_social') != true %}
					<div id="social">
						<h2>{{ Lang.Get('Follow us') }}</h2>
						<ul>
							{% if Custom('facebook_account') is not empty %}
	                        <li class="fb">
	                        	<a href="http://facebook.com/{{ Custom('facebook_account') }}" title="{{ Lang.Get('Follow us on') }} Facebook">{{ Lang.Get('on') }} Facebook</a>
	                        </li>
	                        {% endif %}
	                        {% if Custom('twitter_account') is not empty %}
	                        <li class="twt">
	                        	<a href="http://twitter.com/{{ Custom('twitter_account') }}" title="{{ Lang.Get('Follow us on') }} Twitter">{{ Lang.Get('on') }} Twitter</a>
	                        </li>
	                        {% endif %}
	                        <li class="rss">
	                        	<a href="{{ Blog.RssUrl }}" title="{{ Lang.Get('Follow us with') }} RSS">{{ Lang.Get('with') }} RSS</a>
	                        </li>
						</ul>
					</div>
					{% endif %}
					
					{% if Custom('display_widget_archives') != true and Blog.Archives is not empty %}
					<div id="blog-archive">
						<h2>{{ Lang.Get('Archives') }}</h2>
	                    <div class="box archives">
	                        <div class="box-content">
	                        	<ul id="archivelist">
	                            {% list Blog.Archives %} 
	                            	<li>
	                                	<a href="#" class="plustext" onclick="javascript:switch_arch('{{ Archive.Year }}')">{{ Archive.Year }}</a>
	                                	<ul id="arch_{{ Archive.Year }}" class="arch_month">
	                                	{% list Archive.Months%}
	                                    	{% if Month.PostCount > 0 %}
	                                      	<li><a href="{{ Month.Url }}">{{ Month.Name }}</a> ({{ Month.PostCount }})</li>
	                                    	{% endif %}
	                            		{% endlist %}
	                                	</ul>
	                            	</li>
	                          	{% endlist %}
	                          	</ul>
	                    	</div>
	                    </div>
                    </div>
                    {% endif %}
				</div>
				
				<!-- content-->
				<div id="content">
					<!-- shortcut:[Single Page] -->
				{% if isSingle %}
					<div id="post-details">
