			table{ border-collapse:collapse; border-spacing:0;}
			fieldset,img{ border:0;}
			address,caption,cite,code,dfn,var{ font-style:normal; font-weight:normal;}
			caption,th{ text-align:left;}
			h1,h2,h3,h4,h5,h6{ font-size:100%; font-weight:normal;}
			q:before,q:after{ content:'';}
			abbr,acronym{ border:0;}
			a {text-decoration: none;}			
			
			/** basic **/
			body {background: #D2EEF6 url('http://vivienkaufinger.com/ob/bluefolio/bodybg-bluefolio.jpg') repeat-x left top; color: #7F7F7F; font-family: 'Arial', Georgia, Times New Roman, Times, serif;}
			
			.cb {clear: both;}
			.cl {clear: left;}
			.cr {clear: right;}	
								
			#global {width: 699px; margin: 30px auto 0;}
			#content {width: 699px; margin: 0 auto; background-color: #fff;}
			
			
			/** HEADER **/
			#header {width:  inherit;}
			#logo {float: left; width: 218px; height: 65px; background: url('http://vivienkaufinger.com/ob/bluefolio/say+hi+boys01.png') no-repeat;}
			#logo p {float: right; max-width: 140px; margin: 17px 17px 0 0; font-size: 11px; font-family: Arial; color: #777777; text-align: center;}
