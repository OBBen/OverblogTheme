				.ob-text h3, 
				.ob-text h4, 
				.ob-text h5 {font-weight: bold; margin: 0 0 10px; text-align: left;}
				.ob-text h2 {font-size: 24px; line-height: 22px;}
		        .ob-text h3 {font-size: 18px; line-height: 18px;}
		        .ob-text h4 {font-size: 16px; line-height: 16px;}	
		        .ob-text h5 {font-size: 14px; line-height: 14px;}
		        .ob-text p,
		        .ob-text pre {margin: 0 0 15px;}
		        .ob-text pre {background-color: #EEE; border: 1px dashed #DDD; padding: 10px; white-space: pre-wrap; white-space: -moz-pre-wrap; white-space: -pre-wrap; white-space: -o-pre-wrap; word-wrap: break-word; overflow: auto;}
				.ob-text p a, 
				.ob-text p a:visited, 
				.ob-link {color: #5DC0E2;}
				.ob-text p a:hover, 
				.ob-link:hover {text-decoration: underline;}
				
				.ob-text ol, 
				.ob-text ul,
				.ob-section-html ol, 
				.ob-section-html ul {margin-left: 30px;}
				.ob-section li p {margin: 0;}
	
				
				/* section audio */
		        .ob-section-audio .obsoundplayer .obsoundplayername {height: 31px; width: 117px; overflow: hidden;}
		        
				.share, 
				.item-comments {margin: 30px 0;}
				.share h4 {margin: 0 0 5px; color: #5DC0E2;}
				.fb-like iframe {margin-top: -3px;}
		
			#contentBkg-bottom {width: 699px; height: 78px; background: url('http://vivienkaufinger.com/ob/bluefolio/content-footer-bg.png') no-repeat;}
			
			/** contact **/
			.ob-form {margin-bottom: 50px;}
			.ob-input-text, 
			.ob-input-email {height: 22px; border: 1px solid #67ABC2;}
			.ob-input-textarea {border: 1px solid #67ABC2;}
			.ob-input-submit {width: 90px; padding: 5px 20px; background-color: #67ABC2; border: none; padding: 4px 19px; -webkit-border-radius: 5px; -moz-border-radius: 5px; -o-border-radius: 5px; border-radius: 5px; color: #E2F4FA; text-shadow: 1px 1px 1px #67ABC2; font-size: 13px; font-weight: bold; text-transform: uppercase; letter-spacing: 1px;}
			.ob-input-submit:hover {cursor: pointer; background-color: #E2F4FA; color: #67ABC2; text-shadow: 1px 1px 1px #E2F4FA;}
			.ob-form + a,
			.ob-form + a:visited {color: #5DC0E2; font-size: 12px; text-align: center;}
			.ob-form + a:hover {text-decoration: underline;}


        	/** FOOTER **/
        	#topFooter {width: 100%; margin: 20px auto 0; background: url('http://vivienkaufinger.com/ob/bluefolio/box-footer-bg.jpg') repeat-x scroll 0% 0% rgb(255, 255, 255);}
        		.footer-wrapper {width: 699px; margin: 0 auto; font-family: Verdana; word-wrap: break-word;}
	        	.about-author {width: 100%;}
	        		.about-author h3, 
	        		.last-post-widget h3, 
	        		.follow-widget h3 {margin-bottom: 15px; color: #67ABC2; font-size: 15px; font-weight: bold; text-shadow: 1px 1px 1px #fff; letter-spacing: 1px;}
	        	.author-avatar {float: left; margin-right: 10px;}    	
	        		.avatar {display: block; width: 194px; height: 127px; padding: 3px; background-color: #FFF; border: 1px solid #e0eae9;}
	        			.avatar img {-moz-opacity: 0.8; -webkit-opacity: 0.8; -o-opacity: 0.8; opacity: 0.8; -moz-transition: opacity 300ms; -webkit-transition: opacity 300ms; -o-transition: opacity 300ms; transition: opacity 300ms;}
	        			.avatar img:hover {-moz-opacity: 1; -webkit-opacity: 1; -o-opacity: 1; opacity: 1;}
	        			.avatar-shadow {display: block; width: 191px; height: 13px; margin: 0 0 0 7px; background: url('http://vivienkaufinger.com/ob/bluefolio/bluefolio-shadow.png') no-repeat;}
	        			.about-author p {font-size: 12px; line-height: 20px;}
        	
        	
	        	.last-post-widget {float: left; width: 45%; margin-top: 20px;}
	        		.last-post-widget ul {list-style: none;}
	        			.last-post {display: block; margin-bottom: 6px; -webkit-border-radius: 5px; -moz-border-radius: 5px; border-radius: 5px; background-color: #F3F3F3; border: 1px solid #EEE; font-size: 12px;}
	        				.last-post a, 
	        				.last-post a:visited {display: block; padding: 5px; color: #7F7F7F; width: 100%; height: 100%;}
	        				.last-post:hover {background-color: #FFF;}
				        	.last-post-title {font-size: 13px; font-weight: bolder;}
				        	.last-post-date {display: block; font-size: 12px;}
          	
	          	.follow-widget {
	          		{% if Custom('display_widget_lasts') == true %}
	          			width: 29%; margin: 40px auto;
	          		{% else %}
	          			width: 45%; float: right; margin-top: 90px;
	          		{% endif %}}
	          		.social-link {float: left; display: block; width: 51px; height: 52px; margin-left: 15px; background: url("http://vivienkaufinger.com/ob/bluefolio/bluefolio-social-sprite.png") no-repeat; -moz-transition: margin-top ease 200ms; -webkit-transition: margin-top ease 200ms; -o-transition: margin-top ease 200ms; transition: margin-top ease 200ms; text-indent: -99999px; }
	          		.social-link:hover {margin-top: -10px;}
		        	.facebook {background-position: left top;}
		        	.twitter {background-position: center top;}
		        	.rss {background-position: right top;}
		        	.follow-widget h3 {width: 183px; margin-left: 15px; padding-top: 10px; text-align: center;}
				
        	#footerBloc-bottom a, #footerBloc-bottom a:visited {color: #767ABC;}
        	#footerBloc-bottom a:hover {text-decoration: underline;}
        	#footerBloc-bottom {margin-top: 40px; display: block; font-size: 10px; text-align: center;}
        	#bottomFooter {width: 100%; height: 46px; margin: 0 auto; background: #fff url('http://vivienkaufinger.com/ob/bluefolio/grass.jpg') repeat-x bottom;}
