	<body>
		<div id="global">
			
			<!-- HEADER -->
			<div id="header">
				<div id="logo">
					<p>{{ Lang.Get('Welcome on') }} <br /><span>{{ Blog.Title | truncate(21) }}</span></p>
				</div>
				<nav role="naviagtion">
					<ul>
						<li><a {% if isIndex %}class="selected"{% endif %} href="{{ Blog.Url }}" title="{{ Blog.Url }}">{{ Lang.Get('Home') }}</a></li>
						{% if Custom('nav_1_link') is not empty %}
							<li><a href="{{ Custom('nav_1_link')}}">{{ Custom('nav_1_title')|truncate(10) }}</a></li>
						{% endif %}
						<li><a href="{{ Custom('nav_2_link') }}">{{ Custom('nav_2_title')|truncate(10) }}</a></li>
						<li><a href="{{ Blog.Url }}/contact">{{ Lang.Get('Contact') }}</a></li>
					</ul>
				</nav>
				<div class="cb"></div>
				
				<div id="headerTitle">
					
					{% if isSingle %}
						<h1>
					{% else %}
						<p>
					{% endif %}
						<a href="{{ Blog.Url }}" title="{{ Blog.Description }}">
							{{ Blog.Title }}
						</a>
					{% if isSingle %}
						</h1>
					{% else %}
						</p>
					{% endif %}
					<p>{{ Blog.Description }}</p>
				</div>
			</div>
			
			<!-- MAIN -->
			<div id="content-wrapper">
				<div id="contentBkg-top"></div>
				<div id="content">
                    <div id="post-header">
                        {% if isSingle %}
	                        <h1>
	                        	{% if Post.Title is not empty %}
	                        		{{ Post.Title }}{% else %}{{ Lang.Get('A post from') }} {% list Post.Sources %}{{ Lang.Get(Source) }} {% if not loop.last %}{{ Lang.Get('and') }} {% endif %}{% endlist %}
	                    		{% endif %}
	                    	</h1>
	                    	<div class="post-metas">
	                        	<span class="date">{{ Lang.Get('Posted on') }} {{ Post.Date | date('F d, Y') }}</span>
	                        	{% if Post.Author is not empty %}
	                        		<span class="author">{{ Lang.Get('by') }} {{ Post.Author }}</span>
	                        	{% endif %}
	                        	{% list Post.Tags %}
									{% if loop.index == 1 %} - {% endif %}
									<span class="tag">#<a href="{{ Tag.Url }}">{{ Tag.Title }}</a></span>{% if loop.last is empty %}, {% endif %}
								{% endlist %}
	                    	</div>
	                    
	                    {% elseif isSearch %}
                    		<h2 class="special-page-title">{{ Lang.Get('Search results for') }} "{{ Search.Keyword }}"</h2>
                    	
                    	{% elseif isSpecial %}
	                		<h2 class="special-page-title">{{ Lang.Get('Contact me') }}</h2>
	                	
	                	{% elseif isTag %}
	                		<h2 class="tag-page-title">{{ Lang.Get('Posts with') }} {{ Tag.Title }} tag.</h2>
	                	
	                	{% endif %}
					</div>
					<div id="posts-wrapper">
						{% if isSingle %}
							<div id="post-body">
	                        	{{ Post.Body }}
	                        </div>
	                        
	                        <div class="share">
	                			<h4>{% if isPage == false %}{{ Lang.Get('Share this post') }}{% else %}{{ Lang.Get('Share this page') }}{% endif %}</h4>
	                			<!-- Twitter -->
	                			<a href="https://twitter.com/share" class="twitter-share-button" data-text="{% if Post.Title is not empty %}{{ Post.Title }}{% elseif Post.Snippet is not empty %}{{ Post.Snippet}}{% else %}{{ Blog.Title }}{% endif %}" data-url="{{ Blog.Url }}{{ Post.PermaLink }}" data-lang="{{ Blog.Lang }}" {% if Custom('twitter_account') is not empty %} data-via="{{Custom('twitter_account')}}"{% endif %}></a>
	                			
	                			<!-- Google + -->
	                			<div class="g-plusone" data-size="medium" data-href="{{ Blog.Url }}{{ Post.Permalink }}"></div>
	                			
	                			<!-- Facebook -->
	                			<div class="fb-like" data-href="{{ Blog.Url }}{{ Post.PermaLink }}" data-send="false" data-layout="button_count" data-width="105" data-show-faces="true" data-font="lucida grande"></div>
	                			
	                			<!-- Pinterest -->
	                			<a href="http://pinterest.com/pin/create/button/?url={{ Blog.url }}&media={{ Blog.Url}}{{ Post.Permalink }}" class="pin-it-button" count-layout="horizontal"><img border="0" src="//assets.pinterest.com/images/PinExt.png" title="Pin It" /></a>
	                		</div>
	                		
	                		{% if isPage == false %}
					         	<div class="item-comments">
								    {% if Custom("comment") == "Facebook" %}
								    	<div class="fb-comments" data-href="{{ Blog.Url }}{{ Post.Permalink }}" data-num-posts="2" data-width="600"></div>
								    {% elseif Custom("comment") == "Disqus" and Custom('comment_disqus') is not empty %}
								        <div id="disqus_thread"></div>
								        <script type="text/javascript">
								        	var disqus_shortname = '{{ Custom('comment_disqus') }}';
								        	(function() {
									        	var dsq = document.createElement('script'); 
									        	dsq.type = 'text/javascript'; 
									        	dsq.async = true;
									        	dsq.src = 'http://' + disqus_shortname + '.disqus.com/embed.js';
									        	(document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
									        })();
								        </script>
								        <noscript>Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
								    {% else %}
								        {{Post.Comments}}
								    {% endif %}
								</div>
							{% endif %}

						{% elseif isSpecial %}
							<div id="special-body">
	                        	{{ SpecialContent }}
	                        </div>
						{% else %}
							{% if isSearch and Posts is empty %}
								<p class="no-post-found">{{ Lang.Get('No results for this expression') }}.</p>
							{% endif %}
							<ul id="list-posts">
		                        {% list Posts %}
									<li>
										<a href="{{Post.Permalink}}" title="{{Post.Title | default('No title')}}">
											<img src="{% if Post.Cover is not empty %}{{ Post.Cover | resize(194,127) | crop }}{% elseif Custom('custom_thumbnail') is not empty %}{{ Custom('custom_thumbnail') | resize(194,127) | crop }}{% endif %}" alt="{{ Lang.Get('More about') }} {% if Post.Title is not empty %}&quot;{{ Post.Title }}&quot;{% else %}{{ Lang.Get('this post') }}{% endif %}" title="{{ Lang.Get('More about') }} {% if Post.Title is not empty %}&quot;{{ Post.Title }}&quot;{% else %}{{ Lang.Get('this post') }}{% endif %}" />
										</a>
										<div class="thumbTitle">
											<h3>
												<a title="{{ Lang.Get('More about') }} {% if Post.Title is not empty %}&quot;{{ Post.Title }}&quot;{% else %}{{ Lang.Get('this post') }}{% endif %}" href="{{ Post.PermaLink }}">
													{% if Post.Title is not empty %}
														{{ Post.Title|truncate(20) }}
													{% else %}
														{{ Lang.Get('From') }} 
														{% list Post.Sources %}
															{{ Lang.Get(Source) }}
															{% if not loop.last %}
																{{ Lang.Get('and') }} 
															{% endif %}
														{% endlist %}
													{% endif %}
												</a>
											</h3>
											<span class="post-date">{{ Post.Date | date('j / m / Y') }}</span>
										</div>
									</li>
								{% endlist %}
								<div class="cb"></div>
							</ul>
						{% endif %}	
					</div>
					
					{% if Navigation.PreviousPage is not empty or Navigation.NextPage is not empty or Navigation.PreviousPost is not empty or Navigation.nextPost is not empty %}
					<div id="navigation">	
						{% if isPage == false %}
							{% if Navigation.PreviousPage is not empty %}
								<a href="{{ Navigation.PreviousPage }}" class="prev">← {{ Lang.Get('Previous page') }}</a>
							{% elseif Navigation.PreviousPost is not empty %}
								 <a class="prev" href="{{ Navigation.PreviousPost.Permalink }}" title="{{ Navigation.PreviousPost.Title }}">← {{ Lang.Get('Previous post') }}</a>
							{% endif %}
							
							{% if Navigation.NextPage is not empty %}
								<a href="{{ Navigation.NextPage }}" class="next">{{ Lang.Get('Next page') }} →</a>
							{% elseif Navigation.NextPost is not empty %}
								 <a class="next" href="{{ Navigation.NextPost.Permalink }}" title="{{ Navigation.NextPost.Title }}">{{ Lang.Get('Next post') }} →</a>
							{% endif %}
						{% endif %}
						<div class="cb"></div>	
						{% if not isSpecial and not isSearch and not isIndex %}
							<a class="top" href="#">{{ Lang.Get('Top') }} </a>
						{% endif %}
					</div>
					{% endif %}
				</div>
				<div id="contentBkg-bottom"></div>
			</div>		
		</div>
		
		<!-- FOOTER -->
		<div id="topFooter">
			<div class="footer-wrapper">
				<div class="about-author">
					<h3>{{ Lang.Get('About the author') }}</h3>
					<div class="author-avatar">			
						<a class="avatar" href="{{ Blog.Owner.Avatar }}" title="{{ Blog.Owner.Nickname }}">
							<img src="{{ Blog.Owner.Avatar | resize(194,127) | crop }}" alt="{{ Blog.Owner.Nickname }}" title="{{ Blog.Owner.Nickname }}" />
						</a>
