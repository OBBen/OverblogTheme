						<a class="social-link rss" href="{{ Blog.RssUrl }}">{{ Lang.Get('Subscribe to the rss feed') }}</a>
						<div class="cb"></div>
						<h3>{{ Lang.Get('Follow Us') }}</h3>
				</div>
			{% endif %}
