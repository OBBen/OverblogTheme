				.ob-media-left,
				.ob-media-right {padding: 4px; border: 1px solid #7b8d8d; -moz-opacity: 0.8; -webkit-opacity: 0.8; -o-opacity: 0.8; opacity: 0.8; -moz-transition: opacity 300ms; -webkit-transition: opacity 300ms; -o-transition: opacity 300ms; transition: opacity 300ms;}
				.ob-img:hover {-moz-opacity: 1; -webkit-opacity: 1; -o-opacity: 1; opacity: 1;}
				.ob-row-1-col img {width: 590px;}
				.ob-row-2-col img {width: 290px;}
				.ob-row-3-col img {width: 190px;}
				.ob-section-images .ob-slideshow {height: 455px;}
				.ob-section-images .ob-slideshow img {width: 590px;}
				
				/* section video */
				.ob-video iframe {width: 600px;}
				
				/* section file */
				.ob-section-file,
				.ob-ctn {margin-left: 0;}
				
				
				.ob-desc {max-width: 600px; text-align: left; font-size: 13px; font-style: italic;}
				
				.ob-section-quote {border: none;}
				.ob-section-quote blockquote {font-style: italic; max-width: 590px;}
				
				/* section text */
