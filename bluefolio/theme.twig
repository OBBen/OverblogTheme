			nav li a {width: 90px; padding: 5px 20px; color: #67ABC2; font-size: 13px; font-weight: bold; text-transform: uppercase; text-shadow: 1px 1px 1px #E2F4FA; letter-spacing: 1px;}
			nav li a:hover {color: #E2F4FA; text-shadow: 1px 1px 1px #67ABC2;}
			nav li a.selected {padding: 4px 19px; border: 1px solid #C1E7F4; -webkit-border-radius: 5px; -moz-border-radius: 5px; -moz- -o-border-radius: 5px; border-radius: 5px; color: #E2F4FA; text-shadow: 1px 1px 1px #67ABC2;}
			
			
			/** TITLE + BASELINE **/
			#headerTitle {width: 100%; margin-top: 20px; color: #67ABC2;text-shadow: 1px 1px 1px #E2F4FA; letter-spacing: 1px;}
			#headerTitle h1 {font-size: 27px; font-weight: normal;}
			#headerTitle a, #headerTitle a:visited {color: #67ABC2;}
			#headerTitle p {font-size: 12px; font-weight: bold;}
			
			
			/** CONTENT **/
			#content-wrapper {width: 698px; margin: -30px auto 0;}
			#contentBkg-top {width: 699px; height: 78px; background: url('http://vivienkaufinger.com/ob/bluefolio/top-post-header-blueblogger-699.png') no-repeat left bottom;}
			#content {min-height: 350px; padding: 0 0 20px; background-color: #fff;}

			/** list posts **/
			#posts-wrapper {
				{% if not isSingle and not isSpecial %}width: 640px{% else %}width: 600px{% endif %}; margin: 0 auto;}
			#posts-wrapper #list-posts {margin: 0 auto; text-align: center; }
			#posts-wrapper #list-posts li {float: left; width: 212px; height: 212px; margin: 0 0 0 0; background: url('http://vivienkaufinger.com/ob/bluefolio/posthumbnailbg-bluefolio.jpg') no-repeat; list-style: none; word-wrap: break-word;}
			#posts-wrapper #list-posts li img {width: 194px; height: 127px; margin-top: 19px; -moz-opacity: 0.8; -webkit-opacity: 0.8; -o-opacity: 0.8; opacity: 0.8; -moz-transition: opacity 300ms; -webkit-transition: opacity 300ms; -o-transition: opacity 300ms; transition: opacity 300ms;}
			#posts-wrapper #list-posts li:hover img {-moz-opacity: 1; -webkit-opacity: 1; -o-opacity: 1; opacity: 1;}
			.thumbTitle {margin: 15px 0 0 10px;}
			.thumbTitle a, .thumbTitle a:visited {display: block; color: #7F7F7F; font-size: 17px; font-weight: bold; text-align: left; }
			.thumbTitle a:hover {text-decoration: underline;}
			.post-date {float: left; font-size: 11px;}
			#navigation {margin: 50px auto 0; padding: 0 30px;}
			.no-post-found {margin-left: 50px;}
			.prev, 
			.next, 
			.top {color: #67ABC2; font-size: 12px; font-weight: bold;}
			.prev:hover, 
			.next:hover, 
			.top:hover {color: #7F7F7F;}
			.prev {float: left;}
			.next {float: right;}
			.top {display: block; width: 100%; margin-top: 20px; text-align: center;}
			
		
			/** sinlge post **/
			#post-header {width: 600px; margin: 0 auto 0; padding: 15px 0; font-size: 15px; text-align: left; word-wrap: break-word; line-height: 20px;}
				#post-header h1, 
				#post-header h2 {color: #5DC0E2; font-size: 24px; font-weight: bold; text-decoration: none;}
				#post-header h3 a:hover {color: #7F7F7F;}
					.post-metas {display: block; margin: 0 auto; font-size: 12px;}
					.post-metas span, 
					.post-metas a, 
					.post-metas a:visited {color: #5DC0E2; font-size: 14px; font-weight: bold;}
			
			#post-body {width: 100%; margin: 0 auto;}
			
				/* sections */
				.ob-section-text, 
				.ob-section-images, 
				.ob-section-video, 
				.ob-section-audio, 
				.ob-section-quote {width: 100%;}
				
				/* section image */
