<!DOCTYPE html>
<html lang="{{ Blog.Lang|default('en') }}">
    <head>
        <!-- shortcut:[Meta] -->
        <!-- title, description, keyword, robots -->
        {% if isSingle%}
            {% list Posts %}
                <title>{% if Post.Title is not empty %}{{ Post.Title }} - {% elseif Post.Snippet is not empty %}{{ Post.Snippet|truncate(80) }} - {% endif %}{{Blog.Title}}</title>
                <meta name="description" content="{{ Post.Snippet }}" />
                <meta name="keywords" content="{% list Post.Tags %}{{ Tag.Title }}{% if loop.last == false %}, {% endif %}{% endlist %}" />
                <meta name="robots" content="index,follow" />
            {% endlist %}
        {% elseif isTag and Tag is not empty %}
            <title>{{ Tag.Title|title }} - {{Blog.Title}}</title>
            <meta name="description" content="{{ Blog.Description }}" />
            <meta name="keywords" content="{{ Tag.Title|title }}" />
            <meta name="robots" content="index,follow" />
        {% elseif isSearch and Search is not empty %}
            <title>{{ Search|title }} - {{Blog.Title}}</title>
            <meta name="description" content="{{ Blog.Description }}" />
            <meta name="keywords" content="{{ Search|title }}" />
            <meta name="robots" content="noindex" />
        {% else %}
            <title>{{Blog.Title}}</title>
            <meta name="description" content="{{ Blog.Description }}" />
            <meta name="robots" content="index,follow" />
        {% endif %}
        <meta http-equiv="content-type" content="text/html; charset=utf-8" />


        <!-- Social setting : Facebook, G+ .. -->
        <meta property="og:site_name" content="{{ Blog.Title }}" />
        <meta property="og:type" content="blog" />
        <meta property="fb:app_id" content="{% if Custom('facebook_appid') is not empty %}{{ Custom('facebook_appid') }}{% endif %}" />
        <meta itemprop="name" content="{{ Blog.Title }}" />

        {% if isSingle %}
            {% list Posts %}
                <meta property="og:title" content="{% if Post.Title is not empty %}{{ Post.Title }} - {% elseif Post.Snippet is not empty %}{{ Post.Snippet|truncate(80) }}{% endif %}"/>
                <meta property="og:description" content="{{ Post.Snippet }}" />
                <meta itemprop="description" content="{{ Post.Snippet }}" />
                <meta property="og:url" content="{{ Blog.Url }}{{ Post.Permalink }}" />
                {% if Post.Cover %}
                    <meta property="og:image" content="{{ Post.Cover }}"/>
                    <meta itemprop="image" content="{{ Post.Cover }}" />
                {% endif %}
            {% endlist %}
            <meta property="og:type" content="overblogkiwi:see" />
        {% else %}
            <meta property="og:title" content="{{ Blog.Title }}"/>
            <meta property="og:description" content="{{ Blog.Description }}" />
            <meta itemprop="description" content="{{ Blog.Description }}" />
            {% if Blog.Avatar %}
            <meta property="og:image" content="{{ Blog.Avatar }}"/>
            <meta itemprop="image" content="{{ Blog.Avatar }}" />
            {% else %}
                {% list Posts %}
                {% if loop.index == 1 and Post.Cover %}
            <meta property="og:image" content="{{ Post.Cover }}"/>
            <meta itemprop="image" content="{{ Post.Cover }}" />
                {% endif %}
                {% endlist %}
            {% endif %}

            {% if isSearch %}
                <meta property="og:type" content="overblogkiwi:search" />
            {% else %}
                <meta property="og:type" content="overblogkiwi:visit" />
            {% endif %}
        {% endif %}

        <!-- shortcut:[Options] -->
	    <meta name="constant:displayArticlesLimit" content="4" />
	    
	    <meta name="image:custom_thumbnail:Custom default thumbnail" group="Options" />
	    
	    <meta name="tag:nav_tag:Choose the tag which is displayed in the menu" group="Navigation" />
	    <meta name="string:nav_1_title:Title navigation item 1" group="Navigation" />
		<meta name="string:nav_1_link:URL navigation item 1" group="Navigation" />
		<meta name="string:nav_2_title:Title navigation item 2" default="About" group="Navigation" />
		<meta name="string:nav_2_link:URL navigation item 2" default="/about" group="Navigation" />
		
		<meta name="boolean:display_widget_archives:Hide Widget &quot;Archives&quot;" group="Widgets" />
		<meta name="boolean:display_widget_pages:Hide Widget &quot;Pages&quot;" group="Widgets" />
		<meta name="boolean:display_widget_tags:Hide Widget &quot;Tags&quot;" group="Widgets" />
		<meta name="boolean:display_widget_last:Hide Widget &quot;Last posts&quot;" group="Widgets" />
		
		<meta name="boolean:display_widget_social:Hide Widget &quot;Social&quot;" group="Social" />
		<meta name="string:facebook_account:Enter your Facebook Account" default="overblog" group="Social" />
   		<meta name="string:twitter_account:Enter your Twitter Account" default="overblog" group="Social" />
   		        
        <meta name="list:comment:Comment service" items="OverBlog, Facebook, Disqus" default="OverBlog" group="Comment" />
		<meta name="string:comment_disqus:Disqus account" default="obcomment" group="Comment" />
		
		<meta name="string:facebook_appid:Enter your FaceBook App ID" group="Settings" />
        <meta name="string:google_analytics:Enter your Google Analytics ID" group="Settings" />
        <meta name="string:google_webmaster_id:Enter your Google Webmaster Tools ID" group="Settings" />
        <meta name="string:msn_webmaster_id:Enter your MSN Webmaster Tools ID" group="Settings" />

        <!-- shortcut:[Includes] -->
        <!-- favicon -->       
        {% if Blog.FaviconUrl is not empty %}
            <link rel="icon" type="image/png" href="{{ Blog.FaviconUrl }}" />
        {% else %}
            <link rel="shortcut icon" type="image/x-icon" href="http://fdata.over-blog.net/99/00/00/01/img/favicon.ico" />
            <link rel="icon" type="image/png" href="http://fdata.over-blog.net/99/00/00/01/img/favicon.png" />
            <link rel="apple-touch-icon" href="http://fdata.over-blog.net/99/00/00/01/img/mobile-favicon.png" />
        {% endif %}   
       
        <!-- SEO -->
        {% if Custom('google_webmaster_id') is not empty %}
            <meta name="google-site-verification" content="{{ Custom('google_webmaster_id') }}" />
        {% endif %}
        {% if Custom('msn_webmaster_id') is not empty %}
            <meta name="msvalidate.01" content="{{ Custom('msn_webmaster_id') }}" />
        {% endif %}

        <!-- includes -->
        <link rel="alternate" type="application/rss+xml" title="RSS" href="{{ Blog.RssUrl }}" />
        {% if Blog.CssUrl is not empty %}
        <link rel="stylesheet" href="{{ Blog.CssUrl }}" type="text/css" />
        {% endif %}

        {% if Blog.JsUrl is not empty %}
            <script src="{{Blog.JsUrl}}" type="text/javascript"></script>
        {% endif %}
        
        <!--[if lt IE 9]>
		<script src="//html5shiv.googlecode.com/svn/trunk/html5.js"></script>
		<![endif]-->
		
		<!-- Fancybox -->
		<link rel="stylesheet" type="text/css" href="http://assets.over-blog-kiwi.com/themes/jquery/fancybox/jquery.fancybox-1.3.4.css" media="screen" />

        <!-- shortcut:[Styles] -->		
        <style type="text/css">
			/**********
			** RESET **
			**********/
			body,div,dl,dt,dd,ul,ol,li,h1,h2,h3,h4,h5,h6,pre,form,fieldset,input,p,textarea,blockquote,th,td{ margin:0; padding:0;}
	        table{ border-collapse:collapse; border-spacing:0;}
	        fieldset,img{ border:0;}
	        address,caption,cite,code,dfn,var{ font-style:normal; font-weight:normal;}
	        ol,ul{ list-style:none;}
	        caption,th{ text-align:left;}
	        q:before,q:after{ content:'';}
	        abbr,acronym{ border:0;}
			a, a:hover, a:active, a:active {text-decoration: none; border: none; outline: none;}
			img {border: none; outline: none;}


			/**********
			** BASIC **
			**********/
			body {width: 100%; background: url('http://assets.over-blog-kiwi.com/themes/38/img/bg43535.png') repeat left top; font-family: 'Trebuchet MS','Lucida Grande',Verdana,Arial,Halvetica,Sans-Serif; color: #3D3D3D;}

			#global {width: 1000px; margin: 0 auto;}

			.clear {clear: both;}
			
			
			/***********
			** HEADER **
			***********/
			#header-wrapper {width: 823px; height: 200px; margin: 0 auto; background: url('http://assets.over-blog-kiwi.com/themes/38/img/finalheader.png') no-repeat;}
			#title-wrapper, #description-wrapper {padding-left: 100px; text-align: left;}
			#title-wrapper a {font-size: 30px; font-family: 'Trebuchet MS','Lucida Grande',Verdana,Arial,Halvetica,Sans-Serif; font-weight: bold; color: #3D3D3D;}
			#description-title {font-size: 14px; text-transform: uppercase; color: #3D3D3D;}
			
			
			/************
			** CONTENT **
			************/
			#content-wrapper {width: 866px; margin: 0 auto; background: url('http://assets.over-blog-kiwi.com/themes/38/img/outer-bg.png') no-repeat top left;}
			#content-inner {width: 724px; margin-left: 127px; background: url('http://assets.over-blog-kiwi.com/themes/38/img/content2.png') repeat-y top; border-left: 1px solid #B7B295;}
			#content-left {float: left; width: 510px; margin: 0; background: url('http://assets.over-blog-kiwi.com/themes/38/img/main-top-background.png') no-repeat top right;}
			
			/** menu **/
			#menu-wrapper {width: 448px; height: 40px; background: url('http://assets.over-blog-kiwi.com/themes/38/img/navigational.png') no-repeat left top;}
			#menu ul {height: 30px; margin: 0; list-style: none;}
			#menu li {display: inline;}
			#menu li a {float: left; display: block; padding: 5px 20px 0; border-right: 1px solid #C76D4B; color: #fff; font-size: 13px;}
			#menu li a:hover {padding: 5px 20px 8px; background-color: #d28156;}
		
			/** post body **/
			.post-header {margin: 5px 0 20px 2px; font-size: 10px;}
			.post-author, .post-date, .post-tag {margin: 0 2px 0 0; padding: 0 3px; background-color: #F2F2F2; border: 1px dashed #C76D4B;}
			.post-tag a {color: #C76D4B;}
			.post-tag a:hover {text-decoration: underline;}
			.post-cover {margin-bottom: 10px;}
			#post-body {padding: 10px 20px 20px 1px; background: url('http://assets.over-blog-kiwi.com/themes/38/img/post-bodybgcenter.png') no-repeat left top; border-bottom: 1px solid #f2f2f2; font-size: 12px; line-height: 20px; word-wrap: break-word;}
			.ob-text h3, 
			.ob-text h4, 
			.ob-text h5, 
			.ob-text h6 {font-family: 'Arial', 'Helvetica', sans-serif; font-weight: normal; margin: 15px 0 5px;}
			.ob-text h3 {font-size: 18px;}
			.ob-text h4 {font-size: 16px;}
			.ob-text h5 {font-size: 14px; font-weight: bold;}
			.ob-section-text, .ob-section-images, .ob-section-video, .ob-section-audio, .ob-section-quote {width: 465px;}
			.ob-text {width: 465px; margin: 0 auto 5px; padding-left: 1px;}
			.ob-text p {margin-bottom: 15px;}
			.ob-text a, .ob-link {color: #3D3D3D; text-decoration: underline;}
			.ob-text a:hover, .ob-link:hover {color: #C76D4B; text-decoration: none;}
			.ob-text ol, .ob-text ul {margin-left: 15px;}
			.ob-text ol {list-style: decimal;}
			.ob-text ul {list-style: square;}
			.ob-text pre {width: 100%; margin-bottom: 10px; white-space: pre-wrap; white-space: -moz-pre-wrap; white-space: -pre-wrap; white-space: -o-pre-wrap; word-wrap: break-word; overflow: auto;}
			.ob-cell, .ob-img, .ob-media, .ob-video {max-width: 465px;}
			.ob-video iframe {width: 465px;}
			.ob-section-audio .obsoundplayer .obsoundplayername {height: 31px; width: 57px; overflow: hidden;}
			.ob-row-2-col img {width: 50%;}
			.ob-row-3-col img {width: 33.3%;}
			.ob-section-images .ob-slideshow {height: 348px;}
			.ob-section-quote {border: none; padding: 0;}
			.ob-section-quote blockquote {margin: 15px 30px; padding: 10px; background-color: #f9f4f1; border: 1px dashed #C76D4B; font-style: italic;}
			.ob-desc {color: #3D3D3D; font-size: 11px; font-style: italic;}
			
			/** list post **/
			#post-wrapper {margin: 10px 0 0 0; padding: 10px 0 0 24px; text-align: left;}
			.post-block {width: 475px; margin-bottom: 40px; background: url('http://assets.over-blog-kiwi.com/themes/38/img/post-footer.png') no-repeat center bottom; border-bottom: 1px solid #F2F2F2; }
			.post-title a {display: block; color: #3D3D3D; font-size: 20px; font-weight: bold; text-transform: uppercase;}
			.post-title a:hover {color: #C76D4B;}
			.comment-bubble {float: right; width: 50px; margin: -14px 0; padding: 14px 0; background: url('http://assets.over-blog-kiwi.com/themes/38/img/COMT.png') no-repeat; text-align: center;}
			.post-snippet {padding-left: 1px; background: url('http://assets.over-blog-kiwi.com/themes/38/img/post-bodybgcenter.png') no-repeat left top; border-bottom: 1px solid #f2f2f2; font-size: 12px; line-height: 20px; word-wrap: break-word;}
			
			/** SEARCH **/
			.search-block {width: 475px; margin-bottom: 40px;}
			.search-body {padding: 10px 20px 20px 1px; font-size: 12px; line-height: 20px; word-wrap: break-word;}
			.search input[type="text"] {width: 110px;}
			.search input[type="submit"] {width: 50px; height: 18px; background-color: #C76D4B; border: 0; border-radius: 3px; line-height: 18px;}
			.search input[type="submit"]:hover {-moz-opacity: 0.9; -webkit-opacity: 0.9; -o-opacity: 0.9; opacity: 0.9; color: #FFF; cursor: pointer;}
			
			/** CONTACT **/
			.special h3 {color: #3D3D3D; font-size: 20px; font-weight: bold; text-transform: uppercase;}
			.ob-form + a {color: #C76D4B; display: block; margin-top: 80px; text-align: center;}
			.ob-input-submit {width: 50px; height: 22px; background-color: #C76D4B; border: 0; border-radius: 3px;}
			.ob-input-submit:hover {-moz-opacity: 0.9; -webkit-opacity: 0.9; -o-opacity: 0.9; opacity: 0.9; color: #FFF; cursor: pointer;}

			/** footer post **/
			.post-footer {margin-top: 15px;}
			.share-index {margin-bottom: 30px;}
			.share {margin: 30px 0;}
			.share-index h4, .share h4 {margin-bottom: 5px; font-size: 12px;}
			.fb-like iframe {margin-top: -3px;}
			.item-comments h4 {margin-bottom: 10px; font-size: 12px;}
			
			/** footer content **/
			#content-footer {width: 475px; margin: 0 40px 35px 24px;}
			#footer-links a, #footer-links a, #footer-links a {color: #C76D4B; font-size: 12px;}
			#footer-links a:hover, #footer-links a:hover, #footer-links a:hover {text-decoration: underline;}
			#navigation {width: 100%; margin: -30px 0 30px; padding-bottom: 20px;}
			.prev {float:left;}
			#top-link {display: block; position: absolute; left: 45.3%; margin-top: 25px; text-align: right;}	
			#bkg-top {display: block; width: 8px; height: 14px; margin: -5px 25px -10px 0; background: url('http://assets.over-blog-kiwi.com/themes/38/img/mini-blogroll.gif') no-repeat left top;}		
			.next {float: right; text-align: right;}
			#bkg-rss {display: block; width: 16px; height: 12px; margin: -14px 0 0 25px; padding-top: -1px; background: url('http://assets.over-blog-kiwi.com/themes/38/img/mini-rss.gif') no-repeat left top;}
			
			
			/************
			** SIDEBAR **
			************/
			#sidebar-wrapper {float: right; width: 214px; background: url('http://assets.over-blog-kiwi.com/themes/38/img/sidebar-top-background.png') no-repeat left top; }
			#sidebar {width: 214px;	margin: 10px 10px 0 0; padding-bottom: 15px; text-align: left; font-size: 12px;}
			.sidebar-block {margin: 0 25px 10px 10px;}
			.sidebar-block h3 {height:  34px; margin: 10px 0 6px; padding: 8px 0 4px 10px; background: url('http://assets.over-blog-kiwi.com/themes/38/img/sidebar-trans21.png') no-repeat; color:  #222222; font-size: 12px; font-weight: bold; font-family: 'Trebuchet MS','Lucida Grande',Verdana,Arial,Halvetica,Sans-Serif; text-transform: uppercase;}
			.sidebar-block ul {list-style: none; margin: 0; padding: 0;}
			.sidebar-block li {margin: 0 0 5px 0; padding-bottom: 3px; border-bottom: 1px solid #F2F2F2;}
			.sidebar-block li a {color: #C76D4B;}
			.sidebar-block li a:hover {text-decoration: underline;}
			.sidebar-block li ul li {margin-top: 5px; border: none; text-indent: 20px;}
			.lastpost {text-transform: uppercase;}
			.lastpost-date {float: right; margin-right: 5px; font-size: 9px;}
			.bkg-social {display: block; float: left; width: 15px; height: 15px; margin: -1px 5px 0 2px;
				background: url('http://assets.over-blog-kiwi.com/themes/38/img/kesemutan-social.png') no-repeat;}
			.social-widget li {padding-bottom: 5px;}
			.fb {background-position: center top;}
			.twt {background-position: center center;}
			.rss {background-position: center bottom;}



			/***********
			** FOOTER **
			***********/
			#footer-wrapper {width: 726px; height: 82px; margin: 0 0 0 127px; background: url('http://assets.over-blog-kiwi.com/themes/38/img/final-footer.png') repeat-x top;}
			#footer {padding-top: 30px; color: #000000; font-size: 11px; text-transform: uppercase;}
			#footer a {color: #000000;text-decoration: underline;}
			#footer a:hover {color: #fff; text-decoration: none;}
		</style>
	</head>
	<body>
		<!-- GLOBAL -->
		<div id="global">
			<!-- HEADER -->
			<div id="header-wrapper">
				<div id="title-wrapper">
					<h1><a href="{{ Blog.Url }}" title="{{ Blog.Description }}">{{ Blog.Title }}</a></h1>
				</div>
				<div id="description-wrapper">
					<p id="description-title">
						<span>{{ Blog.Description }}</span>
					</p>
				</div>
			</div>
			
			<!-- CONTENT -->
			<div id="content-wrapper">
				<div id="content-inner">
					<div id="content-left">
						<!-- menu -->
						<div id="menu-wrapper">
							<div id="menu">
								<ul>
									<li><a href="{{ Blog.Url }}" title="{{ Blog.Description }}">{{ Lang.Get('Home') }}</a></li>
									{% if Custom('nav_tag') is not empty %}
										<li><a href="{{ Blog.Url }}/tag/{{ Custom('nav_tag') }}">{{ Custom('nav_tag') }}</a></li>
									{% endif %}
									{% if Custom('nav_1_link') is not empty %}
										<li><a href="{{ Custom('nav_1_link')}}">{{ Custom('nav_1_title') }}</a></li>
									{% endif %}
									{% if Custom('nav_2_link') is not empty %}
										<li><a href="{{ Custom('nav_1_link')}}">{{ Custom('nav_2_title') }}</a></li>
									{% endif %}
									<li><a href="{{ Blog.Url }}/contact">{{ Lang.Get('Contact') }}</a></li>
								</ul>
							</div>
						</div>

						<div id="post-wrapper">
						<!-- [Single Page] -->
						{% if isSingle %}
							<div class="post-block">
								<div class="post-title">
									<h2><a title="{{ Lang.Get('More about') }} {% if Post.Title is not empty %}&quot;{{ Post.Title }}&quot;{% else %}{{ Lang.Get('this post') }}{% endif %}" href="{{ Post.PermaLink }}">{% if Post.Title is not empty %}{{ Post.Title }}{% else %}{{ Lang.Get('From') }} {% list Post.Sources %}{{ Lang.Get(Source) }}{% if not loop.last %}{{ Lang.Get('and') }} {% endif %}{% endlist %}{% endif %}</a></h2>
								</div>
								<div class="post-header">
									<span class="post-author">{{ Lang.get('Posted by') }} {{ Post.Author.Nickname | default(Blog.Owner.Nickname) }} </span>
									<span class="post-date">{{ Post.Date|datel(Lang.Get('EEEE')) | title }}, {{ Post.Date|datel(Lang.Get('Default date format')) | title }}</span>
									
									{% if Post.Tags is not empty %}
										<span class="post-tag">{{ Lang.Get('Labels') }} : {% list Post.Tags %}<a href="{{ Tag.Url }}">{{ Tag.title }}</a>{% if loop.last is empty %}, {% endif %}{% endlist %}</span>
									{% else %}
									{% endif %}
								</div>
								<div id="post-body">
									{{ Post.Body }}
								</div>
								<div class="post-footer">
									<div class="share">
				                		<h4>{% if isPage == false %}{{ Lang.Get('Share this post') }}{% else %}{{ Lang.Get('Share this page') }}{% endif %}</h4>
										<div class="fb-like" data-href="{{ Blog.Url }}{{ Post.PermaLink }}" data-send="true" data-layout="button_count" data-width="120" data-show-faces="true" data-font="lucida grande"></div>
										<a href="https://twitter.com/share" class="twitter-share-button" data-text="{% if Post.Title is not empty %}{{ Post.Title }}{% elseif Post.Snippet is not empty %}{{ Post.Snippet}}{% else %}{{ Blog.Title }}{% endif %}" data-url="{{ Blog.Url }}{{ Post.PermaLink }}" data-lang="{{ Blog.Lang }}" {% if Custom('twitter_account') is not empty %} data-via="{{Custom('twitter_account')}}"{% endif %}></a>
										<g:plusone size="medium"></g:plusone>
						         	</div>
						         	{% if isPage == false %}
						         	<div id="comments" class="item-comments">
						         		<h4>{{ Lang.Get('Comment this post') }}</h4>
									    {% if Custom("comment") == "Facebook" %}
									    <div class="fb-comments" data-href="{{ Blog.Url }}{{ Post.Permalink }}" data-num-posts="2" data-width="465"></div>
									    {% elseif Custom("comment") == "Disqus" and Custom('comment_disqus') is not empty %}
									        <div id="disqus_thread"></div>
									        <script type="text/javascript">
									        var disqus_shortname = '{{ Custom('comment_disqus') }}';
									
									        (function() {
									        var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
									        dsq.src = 'http://' + disqus_shortname + '.disqus.com/embed.js';
									        (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
									        })();
									        </script>
									        <noscript>Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
									    {% else %}
									        {{Post.Comments}}
									    {% endif %}
									</div>
									{% endif %}										
								</div>
							</div>
						<!-- [Special Page] -->
						{% elseif isSpecial %}
							<div class="post-block special">
								<div id="post-body">
									{{ SpecialContent }}
								</div>
							</div>
						<!-- [Special Page] -->
						{% elseif isSearch %}
							<div class="search-block">
								<div class="post-title">
									<h3>{{ Lang.Get('Search results for') }} "{{ Search.Keyword }}"</h3>
								</div>
								{% if isSearch and Posts is empty %}
								<div class="search-body">
									<p class="search-result">{{ Lang.get('No posts found for this expression.') }}</p>
								</div>
								{% endif %}				
							</div>
							{% if isSearch and Posts is not empty %}
								{% list Posts %}
								<div class="post-block">
									<div class="post-title">
										<h2>										
											{% if Custom("comment") == "Disqus" and Custom('comment_disqus') is not empty %}
